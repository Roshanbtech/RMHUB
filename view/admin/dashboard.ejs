<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RMHUB Dashboard</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">

  <style>
    body {
      margin: 0;
      background: #f6f8fb;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
      overflow-x: hidden;
    }

    .main-content {
      margin-left: 260px;
      padding: 28px;
      transition: margin-left .2s ease;
    }

    body.sb-collapsed .main-content {
      margin-left: 92px;
    }

    @media (max-width: 991.98px) {
      .main-content {
        margin-left: 0;
        padding: 18px;
      }
    }

    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 18px;
      gap: 16px;
      flex-wrap: wrap;
    }

    .dashboard-header h1 {
      font-size: 28px;
      font-weight: 900;
      color: #0f172a;
      margin: 0;
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 12px;
      border-radius: 14px;
      border: 1px solid rgba(15, 23, 42, .08);
      background: #fff;
      box-shadow: 0 12px 30px rgba(15, 23, 42, .06);
    }

    .user-info img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      background: #3cf696;
      border: 1px solid rgba(15, 23, 42, .25);
      padding: 6px;
    }

    .user-info span {
      font-weight: 900;
      color: #0f172a;
    }

    .rm-card {
      background: #fff;
      border: 1px solid rgba(15, 23, 42, .08);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(15, 23, 42, .08);
      padding: 18px;
    }

    .stat-grid {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 14px;
      margin-bottom: 18px;
    }

    @media (max-width: 1200px) {
      .stat-grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }

    @media (max-width: 576px) {
      .stat-grid {
        grid-template-columns: 1fr;
      }
    }

    .stat-card {
      border-radius: 16px;
      border: 1px solid rgba(15, 23, 42, .08);
      background: #fff;
      box-shadow: 0 12px 30px rgba(15, 23, 42, .06);
      padding: 16px;
      transition: transform .2s ease, box-shadow .2s ease;
    }

    .stat-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 18px 40px rgba(15, 23, 42, .10);
    }

    .stat-head {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      margin-bottom: 10px;
    }

    .stat-icon {
      width: 42px;
      height: 42px;
      border-radius: 14px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border: 1px solid rgba(60, 246, 150, .35);
      background: rgba(60, 246, 150, .14);
      color: #0b1220;
      font-size: 18px;
    }

    .stat-title {
      font-weight: 900;
      color: rgba(15, 23, 42, .75);
      margin: 0;
      font-size: 13px;
      letter-spacing: .2px;
      text-transform: uppercase;
    }

    .stat-value {
      font-weight: 950;
      color: #0f172a;
      margin: 0;
      font-size: 26px;
      line-height: 1.2;
    }

    .section-title {
      font-weight: 950;
      color: #0f172a;
      margin: 0 0 12px;
      font-size: 18px;
    }

    .mini-table thead th {
      background: #3cf696 !important;
      color: #0b1220 !important;
      border-bottom: 0 !important;
      white-space: nowrap;
      vertical-align: middle;
    }

    .mini-table tbody td {
      vertical-align: middle;
    }

    .chart-card {
      border-radius: 16px;
      border: 1px solid rgba(15, 23, 42, .08);
      background: #fff;
      box-shadow: 0 12px 30px rgba(15, 23, 42, .06);
      padding: 16px;
    }

    .chart-container {
      position: relative;
      height: 360px;
      width: 100%;
    }

    .btn-time {
      border-radius: 10px;
      font-weight: 900;
      padding: 8px 12px;
      border: 1px solid rgba(60, 246, 150, .35);
      background: rgba(60, 246, 150, .14);
      color: #0b1220;
    }

    .btn-time:hover {
      background: rgba(60, 246, 150, .20);
    }

    .dashboard-footer {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 70px;
      border-top: 1px solid rgba(15, 23, 42, .08);
      margin-top: 18px;
      color: rgba(15, 23, 42, .65);
      font-weight: 700;
    }
  </style>
</head>

<body>
  <%- include("sidebar") %>

  <div class="main-content">
    <div class="dashboard-header">
      <h1><%- locals.title %></h1>
      <div class="user-info">
        <img src="/images/users-avatar-svgrepo-com.svg" alt="User">
        <span>Admin</span>
      </div>
    </div>

    <div class="stat-grid">
      <div class="stat-card">
        <div class="stat-head">
          <div>
            <p class="stat-title">Total Users</p>
            <p class="stat-value" id="usersCount"><%- usersCount %></p>
          </div>
          <div class="stat-icon"><i class="fa-solid fa-users"></i></div>
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-head">
          <div>
            <p class="stat-title">Total Products</p>
            <p class="stat-value" id="productsCount"><%- productsCount %></p>
          </div>
          <div class="stat-icon"><i class="fa-solid fa-box"></i></div>
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-head">
          <div>
            <p class="stat-title">Total Orders</p>
            <p class="stat-value" id="ordersCount"><%- ordersCount %></p>
          </div>
          <div class="stat-icon"><i class="fa-solid fa-bag-shopping"></i></div>
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-head">
          <div>
            <p class="stat-title">Total Revenue</p>
            <p class="stat-value" id="totalRevenue">â‚¹ <%- Number(totalRevenue).toLocaleString('en-IN') %></p>
          </div>
          <div class="stat-icon"><i class="fa-solid fa-sack-dollar"></i></div>
        </div>
      </div>
    </div>

    <div class="rm-card mb-3">
      <div class="row g-3">
        <div class="col-12 col-lg-4">
          <div class="section-title">Top Categories</div>
          <div class="table-responsive">
            <table class="table table-hover align-middle mini-table mb-0">
              <thead>
                <tr>
                  <th>Category</th>
                  <th>Count</th>
                </tr>
              </thead>
              <tbody>
                <% bestSellingCategories.forEach(category=> { %>
                  <tr>
                    <td style="font-weight: 900;"><%= category.categoryName %></td>
                    <td style="font-weight: 900;"><%= category.count %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="section-title">Top Brands</div>
          <div class="table-responsive">
            <table class="table table-hover align-middle mini-table mb-0">
              <thead>
                <tr>
                  <th>Brand</th>
                  <th>Count</th>
                </tr>
              </thead>
              <tbody>
                <% bestSellingBrands.forEach(brand=> { %>
                  <tr>
                    <td style="font-weight: 900;"><%= brand._id %></td>
                    <td style="font-weight: 900;"><%= brand.count %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="section-title">Top Products</div>
          <div class="table-responsive">
            <table class="table table-hover align-middle mini-table mb-0">
              <thead>
                <tr>
                  <th>Image</th>
                  <th>Product</th>
                  <th>Count</th>
                </tr>
              </thead>
              <tbody>
                <% bestSellingProducts.forEach(product=> { %>
                  <tr>
                    <td>
                      <img src="<%= product.productImage[0] %>" alt="Product" style="width:44px;height:44px;object-fit:cover;border-radius:12px;border:1px solid rgba(15,23,42,.12);background:#fff;">
                    </td>
                    <td style="font-weight: 900;"><%= product.productName %></td>
                    <td style="font-weight: 900;"><%= product.count %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-12 col-lg-6">
        <div class="chart-card">
          <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div class="section-title mb-0">Total Sales Revenue</div>
            <div class="d-flex gap-2 flex-wrap">
              <button class="salesChart btn-time" data="yearly">Yearly</button>
              <button class="salesChart btn-time" data="weekly">Weekly</button>
              <button class="salesChart btn-time" data="daily">Daily</button>
            </div>
          </div>
          <div class="chart-container mt-3">
            <canvas id="myChart"></canvas>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-6">
        <div class="chart-card">
          <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div class="section-title mb-0">Total Orders Placed</div>
            <div class="d-flex gap-2 flex-wrap">
              <button class="ordersChart btn-time" data="yearly">Yearly</button>
              <button class="ordersChart btn-time" data="weekly">Weekly</button>
              <button class="ordersChart btn-time" data="daily">Daily</button>
            </div>
          </div>
          <div class="chart-container mt-3">
            <canvas id="myChartOrders"></canvas>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-6">
        <div class="chart-card">
          <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div class="section-title mb-0">Types of Orders</div>
            <div class="d-flex gap-2 flex-wrap">
              <button class="orderTypeChart btn-time" data="yearly">Yearly</button>
              <button class="orderTypeChart btn-time" data="weekly">Weekly</button>
              <button class="orderTypeChart btn-time" data="daily">Daily</button>
            </div>
          </div>
          <div class="chart-container mt-3">
            <canvas id="myChartOrderType"></canvas>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-6">
        <div class="chart-card">
          <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div class="section-title mb-0">Category Wise Sales</div>
            <div class="d-flex gap-2 flex-wrap">
              <button class="categoryChart btn-time" data="yearly">Yearly</button>
              <button class="categoryChart btn-time" data="weekly">Weekly</button>
              <button class="categoryChart btn-time" data="daily">Daily</button>
            </div>
          </div>
          <div class="chart-container mt-3">
            <canvas id="myChartCategoryWiseSales"></canvas>
          </div>
        </div>
      </div>
    </div>

    <div class="dashboard-footer">
      <p class="mb-0">&copy; 2023 RMHUB. All rights reserved.</p>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    const ctx = document.getElementById('myChart');
    const ctxOrder = document.getElementById('myChartOrders');
    const ctxOrderType = document.getElementById('myChartOrderType');
    const ctxCategoryWise = document.getElementById('myChartCategoryWiseSales');

    let salesTimeBase = 'yearly';
    let orderChartTimeBase = 'yearly';
    let orderTypeChartTimeBase = 'yearly';
    let CategoryChartTimeBase = 'yearly';

    let salesButtons = document.querySelectorAll('.salesChart');
    let orderButtons = document.querySelectorAll('.ordersChart');
    let orderTypeButtons = document.querySelectorAll('.orderTypeChart');
    let categoryButtons = document.querySelectorAll('.categoryChart');

    salesButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        salesTimeBase = btn.getAttribute('data');
        updateData();
      });
    });

    orderButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        orderChartTimeBase = btn.getAttribute('data');
        updateData();
      });
    });

    orderTypeButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        orderTypeChartTimeBase = btn.getAttribute('data');
        updateData();
      });
    });

    categoryButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        CategoryChartTimeBase = btn.getAttribute('data');
        updateData();
      });
    });

    let salesChart = new Chart(ctx, {
      type: 'polarArea',
      data: {
        labels: ['loading'],
        datasets: [{
          label: 'Sales (rs)',
          data: [0],
          backgroundColor: ['#d8f0dd', '#3cf696', '#e5e6de', '#000', 'rgba(30, 160, 89, 0.2)'],
          borderColor: '#000',
          borderWidth: 2,
        }],
      },
      options: { scales: { r: { beginAtZero: true, min: 0 } } }
    });

    let OrderChart = new Chart(ctxOrder, {
      type: 'bar',
      data: {
        labels: ['loading'],
        datasets: [{
          label: 'Orders (no)',
          data: [0],
          backgroundColor: ['#d8f0dd', '#000', '#3cf696', '#e5e6de'],
          borderColor: '#000',
          borderWidth: 2,
        }],
      },
      options: { scales: { y: { beginAtZero: true } } }
    });

    let orderTypeChart = new Chart(ctxOrderType, {
      type: 'line',
      data: {
        labels: ['loading'],
        datasets: [{
          label: 'Orders (no)',
          data: [0],
          backgroundColor: '#d8f0dd',
          borderColor: '#000',
          borderWidth: 2,
          fill: true,
          stack: 'stream',
        }],
      },
      options: { scales: { y: { beginAtZero: true } } }
    });

    let categoryChart = new Chart(ctxCategoryWise, {
      type: 'pie',
      data: {
        labels: ['loading'],
        datasets: [{
          label: 'Orders (no)',
          data: [0],
          backgroundColor: ['#d8f0dd', '#3cf696', '#e5e6de'],
          borderColor: ['#000'],
          borderWidth: 2,
        }],
      },
      options: {
        plugins: {
          legend: { position: 'top', labels: { boxWidth: 20, font: { size: 12 } } }
        }
      }
    });

    function updateData() {
      const currentURL = window.location.origin;
      fetch(`${currentURL}/admin/chart?salesChart=${salesTimeBase}&orderChart=${orderChartTimeBase}&orderType=${orderTypeChartTimeBase}&categoryChart=${CategoryChartTimeBase}`)
        .then(response => response.json())
        .then((Data) => {
          let { saleChartInfo, orderTypeChartInfo, categoryChartInfo, orderQuantityChartInfo } = Data;

          updateChart(salesChart, saleChartInfo, 'totalSales', 'Sales (rs)');
          updateChart(OrderChart, orderQuantityChartInfo, 'totalOrder', 'Orders (no)');

          let orderTypeLabel = orderTypeChartInfo.data.map((type) => type._id);
          let orderTypeValues = orderTypeChartInfo.data.map((type) => type.totalOrder);
          orderTypeChart.data.labels = orderTypeLabel;
          orderTypeChart.data.datasets[0].data = orderTypeValues;
          orderTypeChart.update();

          let categoryWiseLabel = categoryChartInfo.data.map((type) => type._id);
          let categoryWiseValues = categoryChartInfo.data.map((type) => type.count);
          categoryChart.data.labels = categoryWiseLabel;
          categoryChart.data.datasets[0].data = categoryWiseValues;
          categoryChart.update();
        });
    }

    function updateChart(chart, chartInfo, dataKey, label) {
      let chartLabel;
      let chartData;

      if (chartInfo.timeBasis === 'yearly') {
        let months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
        chartLabel = chartInfo.data.map((data) => months[data._id.month - 1]);
        chartData = chartInfo.data.map((data) => data[dataKey]);
      } else if (chartInfo.timeBasis === 'weekly') {
        chartLabel = chartInfo.data.map((data) => data._id);
        chartData = chartInfo.data.map((data) => data[dataKey]);
      } else if (chartInfo.timeBasis === 'daily') {
        chartLabel = chartInfo.data.map((data) => {
          const hr = data._id.hour;
          return `${hr}:00 - ${hr + 1}:00 UTC`;
        });
        chartData = chartInfo.data.map((data) => data[dataKey]);
      }

      chart.data.labels = chartLabel;
      chart.data.datasets[0].data = chartData;
      chart.data.datasets[0].label = label;
      chart.update();
    }

    window.onload = updateData;
  </script>

  <script>
    function getQueryParameter(name) {
      const urlParams = new URLSearchParams(window.location.search);
      return urlParams.get(name);
    }

    const error = getQueryParameter('message');
    if (error) {
      Swal.fire({
        toast: true,
        position: 'top-end',
        icon: 'error',
        background: '#e5e6de',
        text: error.replace(/%20/g, ' '),
        showConfirmButton: false
      });
    }
  </script>
</body>

</html>
