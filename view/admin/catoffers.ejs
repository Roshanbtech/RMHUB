<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>RMHUB</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
      margin: 0;
      background: #f6f8fb;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
      overflow-x: hidden;
    }

    .main-content {
      margin-left: 260px;
      padding: 28px;
      transition: margin-left .2s ease;
    }

    body.sb-collapsed .main-content {
      margin-left: 92px;
    }

    @media (max-width: 991.98px) {
      .main-content {
        margin-left: 0;
        padding: 18px;
      }
    }

    .page-title {
      display: flex;
      align-items: center;
      gap: 12px;
      margin: 4px 0 18px;
      color: #0f172a;
      font-weight: 800;
      letter-spacing: .2px;
    }

    .rm-card {
      background: #fff;
      border: 1px solid rgba(15, 23, 42, .08);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(15, 23, 42, .08);
      padding: 18px 18px 10px;
    }

    #example thead th {
      background: #3cf696 !important;
      color: #0b1220 !important;
      border-bottom: 0 !important;
      vertical-align: middle;
      white-space: nowrap;
    }

    .pill {
      font-weight: 900;
      padding: 6px 10px;
      border-radius: 999px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      min-width: 90px;
    }

    .pill-active {
      background: rgba(34, 197, 94, .12);
      color: #166534;
      border: 1px solid rgba(34, 197, 94, .25);
    }

    .pill-inactive {
      background: rgba(239, 68, 68, .12);
      color: #7f1d1d;
      border: 1px solid rgba(239, 68, 68, .25);
    }

    .cell-actions {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
      justify-content: center;
    }

    .btn-mini {
      border-radius: 10px;
      padding: 7px 10px;
      font-weight: 800;
      border: 0;
      font-size: 13px;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      cursor: pointer;
    }

    .btn-offer {
      background: rgba(60, 246, 150, .15);
      border: 1px solid rgba(60, 246, 150, .35);
      color: #0b1220;
    }

    .btn-offer:hover {
      background: rgba(60, 246, 150, .22);
    }

    .btn-toggle {
      background: #0f172a;
      color: #fff;
    }

    .btn-toggle:hover {
      filter: brightness(.95);
    }

    .dataTables_wrapper .dataTables_filter input {
      border-radius: 10px !important;
      border: 1px solid rgba(15, 23, 42, .15) !important;
      padding: 8px 10px !important;
    }

    .dataTables_wrapper .dataTables_length select {
      border-radius: 10px !important;
      border: 1px solid rgba(15, 23, 42, .15) !important;
      padding: 6px 10px !important;
    }

    form { margin: 0; }
  </style>
</head>

<body>
  <%- include("sidebar") %>

  <div class="main-content">
    <div class="page-title">
      <i class="fa-solid fa-tags" style="color:#0f172a; font-size: 28px;"></i>
      <div style="font-size: 28px; line-height: 1;">Category Offers</div>
      <span class="badge rounded-pill ms-2"
        style="background: rgba(60,246,150,.14); color:#0b1220; border:1px solid rgba(60,246,150,.28); font-weight: 800;">
        Promotions
      </span>
    </div>

    <div class="rm-card">
      <div class="table-responsive">
        <table id="example" class="table table-hover align-middle mb-0" style="width:100%">
          <thead>
            <tr>
              <th>#</th>
              <th>Category</th>
              <th>Offer Rate</th>
              <th>Status</th>
              <th style="text-align:center;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach((cat,index)=> { %>
              <tr>
                <td><%= index + 1 %></td>
                <td style="font-weight: 900;"><%= cat.name %></td>
                <td style="font-weight: 900;"><%= cat.offerDiscountRate %>%</td>

                <td>
                  <% if (cat.onOffer) { %>
                    <span class="pill pill-active">Active</span>
                  <% } else { %>
                    <span class="pill pill-inactive">Inactive</span>
                  <% } %>
                </td>

                <td style="text-align:center;">
                  <div class="cell-actions">
                    <button type="button" class="btn-mini btn-offer" data-bs-toggle="modal"
                      data-bs-target="#offerModal" data-category-id="<%= cat._id %>">
                      <i class="fa-solid fa-pen"></i> Add Offer
                    </button>

                    <button class="btn-mini btn-toggle toggle-offer-btn"
                      data-category-id="<%= cat._id %>"
                      data-current-status="<%= cat.onOffer %>">
                      <%= cat.onOffer ? 'Deactivate' : 'Activate' %>
                    </button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="modal fade" id="offerModal" tabindex="-1" aria-labelledby="offerModalLabel">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="offerModalLabel">Add/Edit Offer</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="card">
              <form id="offerForm" class="card-body" method="POST">
                <div class="row">
                  <fieldset class="col card mx-2">
                    <legend id="category_name">Category :</legend>
                    <div class="mb-3">
                      <label for="offerDiscountRate" class="form-label">Offer Discount (%)</label>
                      <input name="offerDiscountRate" type="number" min="0" class="form-control"
                        id="offerDiscountRate">
                    </div>
                  </fieldset>
                </div>
                <button type="submit" class="btn btn-primary m-2 w-100" style="background-color: #3cf696; border:0;">
                  Add/Modify Offer
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

  <script>
    $(function () {
      $('#example').DataTable({
        pageLength: 10,
        lengthMenu: [5, 10, 25, 50],
        order: [[0, 'asc']]
      });
    });
  </script>

  <script>
    const offerModal = document.getElementById('offerModal');
    const offerForm = document.getElementById('offerForm');

    offerModal.addEventListener('show.bs.modal', async function (event) {
      const button = event.relatedTarget;
      const categoryId = button.getAttribute('data-category-id');

      try {
        const response = await fetch(`/admin/cat-details/${categoryId}`, { method: 'GET' });
        const data = await response.json();

        if (data.success) {
          document.getElementById('category_name').innerText = data.category.name;
          document.getElementById('offerDiscountRate').value = data.category.offerDiscountRate || 0;
          offerForm.action = `/admin/cat-offers/${categoryId}`;
        }
      } catch (error) {
        console.log(error);
      }
    });

    offerForm.addEventListener('submit', async function (event) {
      event.preventDefault();
      const formData = new FormData(offerForm);
      const body = Object.fromEntries(formData);

      try {
        const response = await fetch(offerForm.action, {
          method: 'POST',
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(body)
        });

        const data = await response.json();
        if (data.success) {
          location.reload();
        } else {
          swal("Discount Error!", data.message, "error");
        }
      } catch (error) {
        console.log(error);
      }
    });

    document.addEventListener('DOMContentLoaded', function () {
      document.querySelectorAll('.toggle-offer-btn').forEach(btn => {
        btn.addEventListener('click', async function () {
          const categoryId = this.getAttribute('data-category-id');
          const currentStatus = JSON.parse(this.getAttribute('data-current-status'));

          try {
            const response = await fetch(`/admin/toggle-cat-offer/${categoryId}`, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ newStatus: !currentStatus })
            });

            const data = await response.json();
            if (data.success) location.reload();
          } catch (error) {
            console.error('Error toggling offer:', error);
          }
        });
      });
    });
  </script>
</body>
</html>
