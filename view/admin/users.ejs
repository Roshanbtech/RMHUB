<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>RMHUB â€¢ Admin Users</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg">

  <!-- Bootstrap 5 (CSS ONLY) -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

  <!-- DataTables Bootstrap 5 -->
  <link href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" rel="stylesheet">

  <!-- SweetAlert -->
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

  <!-- Font Awesome (icons used in table heading if needed) -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

  <style>
    body{
      margin:0;
      background:#f6f8fb;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
      overflow-x: hidden;
    }

    /* Main layout synced with sidebar */
    .main-content{
      margin-left: var(--sb-w);
      padding: 24px;
      transition: margin-left 180ms ease;
    }
    body.sb-collapsed .main-content{
      margin-left: var(--sb-w-collapsed);
    }
    @media (max-width: 991.98px){
      .main-content{
        margin-left: 0;
        padding: 18px;
      }
    }

    /* Page header */
    .page-header{
      display:flex;
      align-items:center;
      gap:12px;
      margin-bottom:18px;
    }
    .page-header i{
      font-size:26px;
      color:#3cf696;
    }
    .page-header h2{
      margin:0;
      font-weight:900;
      letter-spacing:.3px;
    }

    /* Card */
    .rm-card{
      background:#fff;
      border-radius:18px;
      padding:18px;
      box-shadow:0 14px 30px rgba(2,6,23,0.08);
      border:1px solid rgba(15,23,42,0.08);
    }

    /* Table */
    table.dataTable{
      border-radius:14px;
      overflow:hidden;
    }
    table thead th{
      background:#3cf696 !important;
      color:#0f172a !important;
      font-weight:900;
      border:none;
    }
    table tbody td{
      vertical-align:middle;
      font-weight:600;
    }
    table tbody tr:hover{
      background:#f1f5f9;
    }

    .status-active{
      color:#16a34a;
      font-weight:900;
    }
    .status-inactive{
      color:#dc2626;
      font-weight:900;
    }

    .btn-block-user{
      border:none;
      padding:6px 14px;
      border-radius:999px;
      font-weight:800;
      font-size:13px;
      color:#fff;
      cursor:pointer;
    }
    .btn-block{ background:#dc2626; }
    .btn-unblock{ background:#16a34a; }
  </style>
</head>

<body>

  <!-- Sidebar -->
  <%- include("sidebar") %>

  <!-- Main Content -->
  <main class="main-content">

    <div class="page-header">
      <i class="fas fa-users"></i>
      <h2>Users</h2>
    </div>

    <div class="rm-card">
      <table id="usersTable" class="table table-hover w-100">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Status</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= user.firstName %> <%= user.lastName %></td>
              <td><%= user.email %></td>
              <td><%= user.mobileNumber %></td>
              <td class="<%= user.isActive ? 'status-active' : 'status-inactive' %>">
                <%= user.isActive ? 'Active' : 'Inactive' %>
              </td>
              <td class="text-center">
                <form action="/admin/blockUser/<%= user.id %>" method="POST">
                  <button
                    class="btn-block-user <%= user.isActive ? 'btn-block' : 'btn-unblock' %>">
                    <%= user.isActive ? 'BLOCK' : 'UNBLOCK' %>
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

  </main>

  <!-- JS (ORDER MATTERS) -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>

  <script>
    new DataTable('#usersTable');

    // Toast from query param
    const params = new URLSearchParams(window.location.search);
    const successMessage = params.get('successMessage');
    if(successMessage){
      Swal.fire({
        toast:true,
        position:'top-end',
        icon:'success',
        title:successMessage,
        showConfirmButton:false,
        timer:3000,
        timerProgressBar:true
      });
    }
  </script>

</body>
</html>
