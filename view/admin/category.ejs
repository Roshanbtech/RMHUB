<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>RMHUB</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
      margin: 0;
      background: #f6f8fb;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
      overflow-x: hidden;
    }

    .main-content {
      margin-left: 260px;
      padding: 28px;
      transition: margin-left .2s ease;
    }

    body.sb-collapsed .main-content {
      margin-left: 92px;
    }

    @media (max-width: 991.98px) {
      .main-content {
        margin-left: 0;
        padding: 18px;
      }
    }

    .page-title {
      display: flex;
      align-items: center;
      gap: 12px;
      margin: 4px 0 18px;
      color: #0f172a;
      font-weight: 800;
      letter-spacing: .2px;
    }

    .page-title img {
      width: 38px;
      height: 38px;
      border-radius: 12px;
      border: 2px solid #3cf696;
      background: #eafff5;
      padding: 6px;
    }

    .rm-card {
      background: #fff;
      border: 1px solid rgba(15, 23, 42, .08);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(15, 23, 42, .08);
      padding: 18px 18px 10px;
    }

    .rm-actions {
      display: flex;
      gap: 10px;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      margin-bottom: 12px;
    }

    .rm-actions .left,
    .rm-actions .right {
      display: flex;
      gap: 10px;
      align-items: center;
      flex-wrap: wrap;
    }

    .btn-rm {
      border: 0;
      border-radius: 10px;
      padding: 10px 14px;
      font-weight: 800;
      letter-spacing: .2px;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      cursor: pointer;
      text-decoration: none;
    }

    .btn-green {
      background: #3cf696;
      color: #0b1220;
    }

    .btn-green:hover {
      filter: brightness(.95);
    }

    .btn-soft {
      background: rgba(60, 246, 150, .12);
      color: #0b1220;
      border: 1px solid rgba(60, 246, 150, .35);
    }

    .btn-soft:hover {
      background: rgba(60, 246, 150, .18);
    }

    #example thead th {
      background: #3cf696 !important;
      color: #0b1220 !important;
      border-bottom: 0 !important;
      vertical-align: middle;
      white-space: nowrap;
    }

    #example tbody td {
      vertical-align: middle;
    }

    .status-pill {
      font-weight: 900;
      padding: 6px 10px;
      border-radius: 999px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      min-width: 110px;
    }

    .status-available {
      background: rgba(34, 197, 94, .12);
      color: #166534;
      border: 1px solid rgba(34, 197, 94, .25);
    }

    .status-unavailable {
      background: rgba(239, 68, 68, .12);
      color: #7f1d1d;
      border: 1px solid rgba(239, 68, 68, .25);
    }

    .cell-actions {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
      justify-content: center;
    }

    .btn-mini {
      border-radius: 10px;
      padding: 7px 10px;
      font-weight: 800;
      border: 0;
      font-size: 13px;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      cursor: pointer;
    }

    .btn-edit {
      background: rgba(60, 246, 150, .15);
      border: 1px solid rgba(60, 246, 150, .35);
      color: #0b1220;
    }

    .btn-edit:hover {
      background: rgba(60, 246, 150, .22);
    }

    .btn-toggle {
      background: #0f172a;
      color: #fff;
    }

    .btn-toggle:hover {
      filter: brightness(.95);
    }

    .btn-danger-mini {
      background: #ef4444;
      color: #fff;
    }

    .btn-danger-mini:hover {
      filter: brightness(.95);
    }

    .dataTables_wrapper .dataTables_filter input {
      border-radius: 10px !important;
      border: 1px solid rgba(15, 23, 42, .15) !important;
      padding: 8px 10px !important;
    }

    .dataTables_wrapper .dataTables_length select {
      border-radius: 10px !important;
      border: 1px solid rgba(15, 23, 42, .15) !important;
      padding: 6px 10px !important;
    }

    form { margin: 0; }
  </style>
</head>

<body>
  <%- include("sidebar") %>

  <div class="main-content">
    <div class="page-title">
      <img src="/images/Category.svg" alt="Category" />
      <div>
        <div style="font-size: 28px; line-height: 1;">Categories</div>
        <div style="font-size: 13px; font-weight: 600; color: rgba(15,23,42,.6); margin-top: 4px;">
          Manage category visibility and lifecycle controls.
        </div>
      </div>
    </div>

    <div class="rm-card">
      <div class="rm-actions">
        <div class="left">
          <button class="btn-rm btn-green" type="button" onclick="location.href='/admin/addcategory'">
            <i class="fa-solid fa-plus"></i> Add Category
          </button>

          <button class="btn-rm btn-soft" type="button" onclick="location.href='/admin/cat-offers'">
            <i class="fa-solid fa-tags"></i> Category Offers
          </button>
        </div>
        <div class="right"></div>
      </div>

      <div class="table-responsive">
        <table id="example" class="table table-hover align-middle mb-0" style="width:100%">
          <thead>
            <tr>
              <th>#</th>
              <th>Category Name</th>
              <th>Status</th>
              <th style="text-align:center;">Actions</th>
              <th style="text-align:center;">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach((category, index)=> { %>
              <tr>
                <td><%= index + 1 %></td>
                <td style="font-weight: 900;"><%= category.name %></td>

                <td>
                  <% if (category.isListed) { %>
                    <span class="status-pill status-available">Available</span>
                  <% } else { %>
                    <span class="status-pill status-unavailable">SoftDeleted</span>
                  <% } %>
                </td>

                <td style="text-align:center;">
                  <div class="cell-actions">
                    <button class="btn-mini btn-edit" type="button"
                      onclick="location.href='/admin/editcategory/<%= category.id %>'">
                      <i class="fa-solid fa-pen-to-square"></i> Edit
                    </button>

                    <form action="/admin/toggle-category/<%= category.id %>" method="POST">
                      <button class="btn-mini btn-toggle" type="submit">
                        <%= category.isListed ? 'Unlist' : 'List' %>
                      </button>
                    </form>
                  </div>
                </td>

                <td style="text-align:center;">
                  <button class="btn-mini btn-danger-mini" type="button"
                    onclick="confirmDelete('<%= category.id %>')">
                    <i class="fa-solid fa-trash"></i> Delete
                  </button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

  <script>
    $(function () {
      $('#example').DataTable({
        pageLength: 10,
        lengthMenu: [5, 10, 25, 50],
        order: [[0, 'asc']]
      });
    });
  </script>

  <script>
    function confirmDelete(categoryId) {
      Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3cf696",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!"
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = `/admin/delcategory/${categoryId}`;
        }
      });
    }
  </script>

  <% if (successMessage) { %>
    <script>
      Swal.fire({
        position: "top-end",
        icon: "success",
        title: "<%= successMessage %>",
        showConfirmButton: false,
        timer: 1500
      });
    </script>
  <% } %>

</body>
</html>
