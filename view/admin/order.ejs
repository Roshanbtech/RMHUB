<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>RMHUB</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
      margin: 0;
      background: #f6f8fb;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
      overflow-x: hidden;
    }

    .main-content {
      margin-left: 260px;
      padding: 28px;
      transition: margin-left .2s ease;
    }

    body.sb-collapsed .main-content {
      margin-left: 92px;
    }

    @media (max-width: 991.98px) {
      .main-content {
        margin-left: 0;
        padding: 18px;
      }
    }

    .page-title {
      display: flex;
      align-items: center;
      gap: 12px;
      margin: 4px 0 18px;
      color: #0f172a;
      font-weight: 800;
      letter-spacing: .2px;
    }

    .page-title img {
      width: 38px;
      height: 38px;
      border-radius: 12px;
      border: 2px solid #3cf696;
      background: #eafff5;
      padding: 6px;
    }

    .rm-card {
      background: #fff;
      border: 1px solid rgba(15, 23, 42, .08);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(15, 23, 42, .08);
      padding: 18px 18px 10px;
    }

    .rm-actions {
      display: flex;
      gap: 10px;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      margin-bottom: 12px;
    }

    .btn-rm {
      border: 0;
      border-radius: 10px;
      padding: 10px 14px;
      font-weight: 800;
      letter-spacing: .2px;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      cursor: pointer;
      text-decoration: none;
    }

    .btn-green {
      background: #3cf696;
      color: #0b1220;
    }

    .btn-green:hover {
      filter: brightness(.95);
    }

    #example thead th {
      background: #3cf696 !important;
      color: #0b1220 !important;
      border-bottom: 0 !important;
      vertical-align: middle;
      white-space: nowrap;
    }

    #example tbody td {
      vertical-align: middle;
    }

    .order-id {
      font-weight: 900;
      color: #ef4444;
      letter-spacing: .4px;
    }

    .badge-pill {
      font-weight: 900;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid rgba(15, 23, 42, .12);
      background: rgba(15, 23, 42, .04);
      color: #0f172a;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      white-space: nowrap;
    }

    .pmt {
      font-weight: 900;
      text-transform: uppercase;
      color: #2563eb;
    }

    .status-select {
      width: 170px;
      border-radius: 10px;
      border: 1px solid rgba(15, 23, 42, .15);
      background: rgba(60, 246, 150, .12);
      font-weight: 800;
    }

    .btn-mini {
      border-radius: 10px;
      padding: 7px 10px;
      font-weight: 800;
      border: 0;
      font-size: 13px;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      cursor: pointer;
    }

    .btn-update {
      background: #0f172a;
      color: #fff;
    }

    .btn-update:hover {
      filter: brightness(.95);
    }

    .dataTables_wrapper .dataTables_filter input {
      border-radius: 10px !important;
      border: 1px solid rgba(15, 23, 42, .15) !important;
      padding: 8px 10px !important;
    }

    .dataTables_wrapper .dataTables_length select {
      border-radius: 10px !important;
      border: 1px solid rgba(15, 23, 42, .15) !important;
      padding: 6px 10px !important;
    }

    .modal-header {
      background: #3cf696;
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
    }

    .modal-title {
      font-weight: 900;
      color: #0b1220;
    }

    .return-request {
      border: 1px solid rgba(60, 246, 150, .45);
      padding: 14px;
      border-radius: 14px;
      background: #fff;
      margin-bottom: 12px;
    }

    .return-request h5 {
      font-weight: 900;
      margin: 0 0 10px;
      color: #0f172a;
    }

    .return-request p {
      margin: 0 0 8px;
      color: rgba(15, 23, 42, .85);
    }

    .return-table thead th {
      background: #3cf696 !important;
      color: #0b1220 !important;
    }

    .product-thumb {
      width: 44px;
      height: 44px;
      object-fit: cover;
      border-radius: 12px;
      border: 1px solid rgba(15, 23, 42, .12);
      background: #fff;
    }
  </style>
</head>

<body>
  <%- include("sidebar") %>

  <div class="main-content">
    <div class="page-title">
      <img src="/images/orders-svgrepo-com.svg" alt="Orders" />
      <div>
        <div style="font-size: 28px; line-height: 1;">Orders</div>
        <div style="font-size: 13px; font-weight: 600; color: rgba(15,23,42,.6); margin-top: 4px;">
          Track order lifecycle, status transitions, and return requests.
        </div>
      </div>
    </div>

    <div class="rm-card">
      <div class="rm-actions">
        <div></div>
        <div>
          <button class="btn-rm btn-green" type="button" data-bs-toggle="modal" data-bs-target="#returnRequestModal">
            <i class="fa-solid fa-rotate-left"></i> Return Requests
          </button>
        </div>
      </div>

      <div class="table-responsive">
        <table id="example" class="table table-hover align-middle mb-0" style="width:100%">
          <thead>
            <tr>
              <th>#</th>
              <th>Order ID</th>
              <th>User</th>
              <th>Products</th>
              <th>Date & Time</th>
              <th>Order Status</th>
              <th>Price</th>
              <th>Shipping Address</th>
              <th>Payment</th>
            </tr>
          </thead>

          <tbody>
            <% orders.forEach((order, index)=> { %>
              <tr>
                <td><%= index + 1 %></td>

                <td>
                  <span class="order-id"><%= order._id.toString().slice(-7).toUpperCase() %></span>
                </td>

                <td style="font-weight: 800;">
                  <%= order?.userId?.firstName %> <%= order?.userId?.lastName %>
                </td>

                <td style="max-width: 340px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                  <% let products = order.orderItems.map(item => item?.productId?.model).join(', '); %>
                  <%= products %>
                </td>

                <td>
                  <span class="badge-pill">
                    <i class="fa-regular fa-calendar"></i>
                    <%= new Date(order.orderDate).toLocaleDateString('en-IN', { timeZone: 'Asia/Kolkata', weekday: 'short', day:'2-digit', month:'short', year:'numeric' }) %>
                  </span>
                  <div style="margin-top:6px;">
                    <span class="badge-pill">
                      <i class="fa-regular fa-clock"></i>
                      <%= new Date(order.orderDate).toLocaleTimeString('en-US', { timeZone: 'Asia/Kolkata', hour12: true }) %>
                    </span>
                  </div>
                </td>

                <td>
                  <form action="/admin/updateOrderStatus/<%= order._id %>" method="POST" style="margin:0;">
                    <select class="form-select status-select" name="status"
                      <% if (order.orderStatus==='cancelled' || order.orderStatus==='returned') { %> disabled <% } %>>
                      <% orderStatusOptions.forEach(option=> { %>
                        <option value="<%= option %>" <%= order.orderStatus===option ? 'selected' : '' %>>
                          <%= option %>
                        </option>
                      <% }) %>
                    </select>

                    <div class="d-flex justify-content-center mt-2">
                      <% if (order.orderStatus==='cancelled' || order.orderStatus==='returned') { %>
                        <span class="badge-pill">Locked: <%= order.orderStatus %></span>
                      <% } else { %>
                        <button class="btn-mini btn-update" type="submit">
                          <i class="fa-solid fa-check"></i> Update
                        </button>
                      <% } %>
                    </div>
                  </form>
                </td>

                <td style="font-weight: 900;">₹<%= order.totalPrice %></td>

                <td style="min-width: 260px;">
                  <% order?.userId?.address.forEach((address, i)=> { %>
                    <div style="margin-bottom: 10px;">
                      <div style="font-weight: 900;">Address <%= i + 1 %></div>
                      <div style="color: rgba(15,23,42,.85);">
                        <%= address.addressLineOne %>, <%= address.addressLineTwo %>, <%= address.city %>, <%= address.state %>, <%= address.pincode %>
                      </div>
                    </div>
                  <% }) %>
                </td>

                <td>
                  <span class="pmt"><%= order.paymentMethod %></span>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Return Requests Modal -->
  <div class="modal fade" id="returnRequestModal" tabindex="-1" aria-labelledby="returnRequestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
      <div class="modal-content" style="border-radius: 14px; overflow: hidden;">
        <div class="modal-header">
          <h5 class="modal-title" id="returnRequestModalLabel">Return Request Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <% returnRequests.forEach((request,index)=> { %>
            <div class="return-request">
              <h5>Request <%= index + 1 %></h5>

              <p><strong>Request ID:</strong> <%= request._id.toString().slice(-7).toUpperCase() %></p>
              <p><strong>User:</strong> <%= request.userId.firstName %> <%= request.userId.lastName %></p>
              <p><strong>Order Total:</strong> ₹<%= request.totalPrice %></p>

              <p style="font-weight: 900; margin-top: 10px;">Order Items</p>
              <div class="table-responsive">
                <table class="table table-hover align-middle return-table">
                  <thead>
                    <tr>
                      <th>Image</th>
                      <th>Product</th>
                      <th>Qty</th>
                      <th>Price</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% request.orderItems.forEach((item)=> { %>
                      <tr>
                        <td>
                          <img class="product-thumb" src="<%= item.productId.image[0] %>" alt="<%= item.productId.model %>">
                        </td>
                        <td style="font-weight: 800;"><%= item.productId.model %></td>
                        <td style="font-weight: 800;"><%= item.quantity %></td>
                        <td style="font-weight: 900;">₹<%= item.price %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>

              <p><strong>Reason:</strong> <%= request.returnRequest %></p>

              <% if (request.orderStatus !== 'returned' || request.orderStatus === 'delivered') { %>
                <button class="btn-rm btn-green approve-return-button" type="button" data-id="<%= request._id %>">
                  <i class="fa-solid fa-thumbs-up"></i> Approve
                </button>
              <% } %>
            </div>
          <% }) %>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

  <script>
    $(function () {
      $('#example').DataTable({
        pageLength: 10,
        lengthMenu: [5, 10, 25, 50],
        order: [[0, 'asc']]
      });
    });
  </script>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const approveButtons = document.querySelectorAll('.approve-return-button');

      approveButtons.forEach(button => {
        button.addEventListener('click', function (event) {
          event.preventDefault();
          event.stopPropagation();

          const requestId = button.getAttribute('data-id');

          fetch(`/admin/approve-return/${requestId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
          })
            .then(r => {
              if (!r.ok) throw new Error('Network response was not ok');
              return r.json();
            })
            .then(data => {
              if (data.success) {
                button.remove();
                Swal.fire({ icon: 'success', title: 'Return request approved successfully' });
              } else {
                Swal.fire({ icon: 'error', title: 'Error', text: data.message || 'Failed' });
              }
            })
            .catch(() => {
              Swal.fire({ icon: 'error', title: 'Error', text: 'Failed to send request to the server' });
            });
        });
      });
    });
  </script>
</body>

</html>
