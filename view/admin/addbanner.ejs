<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Banner</title>
    <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .navbar {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 15px;
            background-color: #3cf696;
            height: 60px;
        }

        .navbar img {
            height: 100%;
        }

        .container {
            max-width: 600px;
            /* Reduced container width */
            margin: 0 auto;
            margin-top: 30px;
            margin-bottom: 30px;
        }

        .form-container {
            width: 100%;
            padding: 20px;
            background-color: #fff;
            border-radius: 20px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            animation: slideIn 1s ease;
            margin: 0 auto;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .btn-success {
            background-color: #3cf696;
            border-color: #3cf696;
            color: #fff;
            font-weight: bold;
            transition: all 0.3s ease;
            display: inline-block;
            padding: 10px 20px;
            border-radius: 10px;
            cursor: pointer;
            width: 100%;
            /* Full-width button */
            margin-top: 20px;
            /* Spacing between button and form fields */
        }

        .btn-success:hover {
            background-color: #36e687;
            border-color: #36e687;
        }

        /* Form styles */
        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
            color: black;
        }

        .form-control {
            border-radius: 10px;
            border: 1px solid #3CF696;
            padding: 10px;
            width: 100%;
            background-color: #ffffff;
        }

        .image-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .preview-image {
            max-width: 100px;
            max-height: 100px;
            object-fit: cover;
        }

        .preview-image-wrapper {
            position: relative;
            display: inline-block;
            overflow: hidden;
        }

        .close-button {
            position: absolute;
            top: 5px;
            right: 5px;
            padding: 5px;
            background-color: red;
            color: white;
            border: none;
            border-radius: 50%;
            cursor: pointer;
            z-index: 1;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <img src="/images/NavImg.jpg" alt="RMHUB">
    </div>

    <div class="container">
        <div class="form-container">
            <h2 class="product-title">Add Banner</h2>
            <form id="bannerForm" action="/admin/addbanner" method="post" enctype="multipart/form-data"
                onsubmit="return validateForm()">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Banner Name" id="bannerName" name="bannerName">
                    <div class="error" id="bannerNameError"></div>
                </div>
                <div class="form-group">
                    <input type="file" class="form-control" name="bannerImage" id="bannerImage" multiple>
                    <div class="error" id="bannerImageError"></div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Banner Link" id="bannerLink" name="bannerLink">
                    <div class="error" id="bannerLinkError"></div>
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="Banner Description" id="bannerDescription"
                        name="bannerDescription"></textarea>
                    <div class="error" id="bannerDescriptionError"></div>
                </div>
                <button type="submit" class="btn btn-success">Add Banner</button>
            </form>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        function validateForm() {
            var bannerName = document.getElementById('bannerName').value.trim();
            var bannerLink = document.getElementById('bannerLink').value.trim();
            var bannerDescription = document.getElementById('bannerDescription').value.trim();
            var bannerImage = document.getElementById('bannerImage').files;

            var isValid = true;

            // Validate banner name
            if (bannerName === '') {
                document.getElementById('bannerNameError').innerHTML = '*Banner Name is required';
                document.getElementById('bannerNameError').style.color = 'red';
                document.getElementById('bannerName').style.borderColor = 'red';
                isValid = false;
            } else {
                document.getElementById('bannerNameError').innerHTML = '';
                document.getElementById('bannerName').style.borderColor = '#3cf696';
            }

            // Validate banner link
            if (bannerLink === '') {
                document.getElementById('bannerLinkError').innerHTML = '*Banner Link is required';
                document.getElementById('bannerLinkError').style.color = 'red';
                document.getElementById('bannerLink').style.borderColor = 'red';
                isValid = false;
            } else {
                document.getElementById('bannerLinkError').innerHTML = '';
                document.getElementById('bannerLink').style.borderColor = '#3cf696';
            }

            // Validate banner description
            if (bannerDescription === '') {
                document.getElementById('bannerDescriptionError').innerHTML = '*Banner Description is required';
                document.getElementById('bannerDescriptionError').style.color = 'red';
                document.getElementById('bannerDescription').style.borderColor = 'red';
                isValid = false;
            } else {
                document.getElementById('bannerDescriptionError').innerHTML = '';
                document.getElementById('bannerDescription').style.borderColor = '#3cf696';
            }

            // Validate banner image

            return isValid;
        }

    </script>