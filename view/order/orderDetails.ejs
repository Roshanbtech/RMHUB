<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Order Details | RMHUB</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg">

  <!-- Bootstrap 4 -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    :root{
      --rm-primary:#3cf696;
      --rm-primary-2:#22d67f;
      --rm-ink:#0f172a;
      --rm-muted: rgba(15, 23, 42, 0.65);
      --rm-border: rgba(15, 23, 42, 0.10);
      --rm-shadow: 0 18px 40px rgba(2, 6, 23, 0.12);
      --rm-radius: 18px;
      --rm-radius-lg: 22px;
    }

    body{
      font-family: Arial, sans-serif;
      color: var(--rm-ink);
      background:
        radial-gradient(1100px 600px at 15% 10%, rgba(60, 246, 150, 0.22), transparent 55%),
        radial-gradient(900px 500px at 90% 25%, rgba(60, 246, 150, 0.14), transparent 55%),
        #f8f9fa;
    }

    .page-wrap{ margin-top: 18px; margin-bottom: 48px; }

    .glass-card{
      background: rgba(255,255,255,0.86);
      border: 1px solid rgba(255,255,255,0.60);
      border-radius: var(--rm-radius-lg);
      box-shadow: var(--rm-shadow);
      overflow: hidden;
    }

    .card-head{
      padding: 16px 18px;
      background: rgba(255,255,255,0.75);
      border-bottom: 1px solid rgba(15,23,42,0.08);
      display:flex;
      justify-content: space-between;
      align-items:flex-start;
      gap: 12px;
      flex-wrap: wrap;
    }

    .title{
      margin:0;
      font-weight: 900;
      letter-spacing: 0.2px;
      font-size: 20px;
      display:flex;
      align-items:center;
      gap: 10px;
    }

    .sub{
      margin: 6px 0 0 0;
      color: var(--rm-muted);
      font-weight: 700;
      font-size: 13px;
    }

    .pill{
      display:inline-flex;
      align-items:center;
      gap: 8px;
      padding: 10px 12px;
      border-radius: 999px;
      background: rgba(15,23,42,0.10);
      border: 1px solid rgba(15,23,42,0.12);
      font-weight: 900;
      white-space: nowrap;
    }

    .pill-green{
      background: rgba(60,246,150,0.18);
      border-color: rgba(60,246,150,0.30);
    }

    .section-pad{ padding: 16px 18px 18px 18px; }

    .meta-grid{
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }
    @media(max-width: 767.98px){
      .meta-grid{ grid-template-columns: 1fr; }
    }

    .meta-box{
      background: rgba(255,255,255,0.80);
      border: 1px solid rgba(15,23,42,0.10);
      border-radius: 18px;
      padding: 14px;
    }
    .meta-box .k{
      font-weight: 900;
      color: rgba(15,23,42,0.82);
      margin-bottom: 4px;
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 0.4px;
    }
    .meta-box .v{
      font-weight: 900;
      color: rgba(15,23,42,0.95);
    }
    .meta-box .s{
      font-weight: 700;
      color: rgba(15,23,42,0.65);
      font-size: 13px;
      margin-top: 4px;
      line-height: 1.4;
    }

    /* Items table (card-like rows) */
    .table-wrap{ overflow-x:auto; margin-top: 12px; }

    table.order-table{
      width:100%;
      border-collapse: separate;
      border-spacing: 0 10px;
      margin: 0;
    }
    table.order-table thead th{
      border:none;
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      color: rgba(15,23,42,0.95);
      font-weight: 900;
      padding: 14px;
      white-space: nowrap;
    }
    table.order-table tbody td{
      background: rgba(255,255,255,0.88);
      border-top: 1px solid rgba(15,23,42,0.08);
      border-bottom: 1px solid rgba(15,23,42,0.08);
      padding: 14px;
      vertical-align: middle;
      font-weight: 800;
    }
    table.order-table tbody td:first-child{
      border-left: 1px solid rgba(15,23,42,0.08);
      border-top-left-radius: 16px;
      border-bottom-left-radius: 16px;
    }
    table.order-table tbody td:last-child{
      border-right: 1px solid rgba(15,23,42,0.08);
      border-top-right-radius: 16px;
      border-bottom-right-radius: 16px;
      white-space: nowrap;
    }

    .prod{
      display:flex;
      align-items:flex-start;
      gap: 12px;
      min-width: 260px;
    }
    .prod-img{
      width: 64px;
      height: 64px;
      border-radius: 16px;
      background:#fff;
      border: 1px solid rgba(15,23,42,0.10);
      box-shadow: 0 10px 16px rgba(2,6,23,0.06);
      overflow:hidden;
      display:flex;
      align-items:center;
      justify-content:center;
      flex: 0 0 auto;
    }
    .prod-img img{
      width:100%;
      height:100%;
      object-fit: contain;
      padding: 8px;
      display:block;
    }

    .btn-rm{
      border:none;
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      color: rgba(15,23,42,0.95);
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      box-shadow: 0 18px 30px rgba(34,214,127,0.18);
      transition: transform 160ms ease, filter 160ms ease;
      display:inline-flex;
      align-items:center;
      gap: 10px;
      white-space: nowrap;
    }
    .btn-rm:hover{
      transform: translateY(-1px);
      filter: brightness(0.98);
      color: rgba(15,23,42,0.95);
      text-decoration:none;
    }

    .btn-soft{
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.80);
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      color: rgba(15,23,42,0.92);
      display:inline-flex;
      align-items:center;
      gap: 10px;
      transition: transform 160ms ease, background 160ms ease;
      white-space: nowrap;
    }
    .btn-soft:hover{
      transform: translateY(-1px);
      background: rgba(255,255,255,0.95);
      color: rgba(15,23,42,0.95);
      text-decoration:none;
    }

    .btn-danger-rm{
      border: none;
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      background: #e11d48;
      color: #fff;
      display:inline-flex;
      align-items:center;
      gap: 10px;
      transition: transform 160ms ease, filter 160ms ease;
      white-space: nowrap;
    }
    .btn-danger-rm:hover{
      transform: translateY(-1px);
      filter: brightness(0.98);
      color: #fff;
      text-decoration:none;
    }

    .actions-row{
      display:flex;
      gap: 10px;
      flex-wrap: wrap;
      margin-top: 14px;
    }

    /* Modal polish */
    .modal-content{
      border: none;
      border-radius: 18px;
      overflow: hidden;
      box-shadow: var(--rm-shadow);
    }
    .modal-header{
      border-bottom:none;
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      color: rgba(15,23,42,0.95);
    }
    .modal-title{
      font-weight: 900;
    }
    .field{
      width:100%;
      border-radius: 14px;
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.85);
      font-weight: 800;
      padding: 10px 12px;
      outline:none;
    }
    .err{
      font-weight: 800;
      margin-top: 6px;
      font-size: 12px;
      color: #e11d48;
      display:none;
    }
  </style>
</head>

<body>
  <%- include("../user/nav") %>

  <div class="container page-wrap">
    <div class="glass-card">

      <div class="card-head">
        <div>
          <h1 class="title"><i class="fas fa-receipt"></i> Order Details</h1>
          <p class="sub">Track your order status, payment state, and item breakdown.</p>
        </div>

        <div class="d-flex" style="gap:10px; flex-wrap:wrap;">
          <span class="pill pill-green">
            <i class="fas fa-hashtag"></i>
            <span>#<%= order._id.toString().slice(-7).toUpperCase() %></span>
          </span>
          <a class="btn-soft" href="/cart/orderhistory"><i class="fas fa-arrow-left"></i> Back to My Orders</a>
        </div>
      </div>

      <div class="section-pad">

        <div class="meta-grid">
          <div class="meta-box">
            <div class="k">Order Date</div>
            <div class="v">
              <%= new Date(order.orderDate).toLocaleDateString('en-IN', { timeZone: 'Asia/Kolkata', weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' }) %>
              <span style="font-weight:800; color: rgba(15,23,42,0.70);">
                • <%= new Date(order.orderDate).toLocaleTimeString('en-US', { timeZone: 'Asia/Kolkata', hour12: true }) %>
              </span>
            </div>
            <div class="s">Payment Method: <strong><%= order.paymentMethod %></strong></div>
          </div>

          <div class="meta-box">
            <div class="k">Order Total</div>
            <div class="v">₹<%= Number(order.totalPrice).toLocaleString('en-IN') %></div>

            <% if (order.appliedCoupon) { %>
              <div class="s">
                Coupon: <strong><%- order.appliedCoupon.code %></strong>
                <span style="margin-left:8px; font-weight:900; color:#0f172a; background: rgba(60,246,150,0.20); border:1px solid rgba(60,246,150,0.30); padding:4px 8px; border-radius:999px;">
                  ₹<%- Number(order.couponDiscount).toLocaleString('en-IN') %> OFF
                </span>
              </div>
            <% } %>

            <div class="s">Order Status: <strong><%= order.orderStatus %></strong></div>

            <% if (order.paymentMethod === 'PayPal') { %>
              <div class="s">Payment Status: <strong><%= order.paymentStatus %></strong></div>
            <% } %>
          </div>

          <div class="meta-box" style="grid-column: 1 / -1;">
            <div class="k">Shipping Address</div>
            <div class="v" style="font-weight:800;"><%= order.shippingAddress %></div>
          </div>
        </div>

        <div class="table-wrap">
          <table class="order-table">
            <thead>
              <tr>
                <th style="width:48%;">Product</th>
                <th style="width:22%;">Name</th>
                <th style="width:12%;">Quantity</th>
                <th style="width:18%;">Total</th>
              </tr>
            </thead>
            <tbody>
              <% order.orderItems.forEach(item => { %>
                <tr>
                  <td>
                    <div class="prod">
                      <div class="prod-img">
                        <img src="<%= item.productId.image[0] %>" alt="<%= item.productId.model %>">
                      </div>
                      <div>
                        <div style="font-weight:900;"><%= item.productId.model %></div>
                        <div style="font-weight:700; color: rgba(15,23,42,0.65); font-size:12px;">
                          <%= item.productId.description %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td style="font-weight:900;"><%= item.productId.model %></td>
                  <td style="font-weight:900;"><%= item.quantity %></td>
                  <td style="font-weight:900;">₹<%= Number(item.price * item.quantity).toLocaleString('en-IN') %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <!-- ACTIONS (same rules you had, just styled) -->
        <div class="actions-row">

          <% if (order.orderStatus !== 'cancelled' && order.orderStatus !== 'delivered' && order.orderStatus !== 'returned') { %>
            <a class="btn-danger-rm" href="/cart/cancelorder/<%= order._id %>">
              <i class="fas fa-times-circle"></i> Cancel Order
            </a>
          <% } %>

          <% if (order.orderStatus === 'delivered' && !order.returnRequested) { %>
            <button class="btn-rm" type="button" onclick="openReturnModal('<%= order._id %>')">
              <i class="fas fa-undo"></i> Return Order
            </button>

            <a class="btn-soft" href="/cart/invoice/<%= order._id %>">
              <i class="fas fa-file-invoice"></i> Invoice
            </a>
          <% } %>

          <% if (order.paymentStatus === 'failed') { %>
            <form action="/payment/paymentretry" method="POST" style="display:inline;">
              <input type="hidden" name="orderId" value="<%= order._id %>">
              <button type="submit" class="btn-rm">
                <i class="fas fa-redo"></i> Retry Payment
              </button>
            </form>
          <% } %>

        </div>

      </div>
    </div>
  </div>

  <!-- Return Modal (Bootstrap) -->
  <div class="modal fade" id="returnModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="fas fa-undo mr-2"></i>Return Order</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="opacity:1;">
            <span aria-hidden="true" style="font-weight:900;">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="returnForm" method="POST" onsubmit="return validateReturnReason()">
            <label style="font-weight:900; margin-bottom:8px;">Reason</label>
            <textarea id="reason" name="reason" rows="4" class="field" placeholder="Tell us why you want to return this order..."></textarea>
            <div id="reasonError" class="err">Please enter a valid reason.</div>

            <div class="d-flex" style="gap:10px; margin-top:14px; flex-wrap:wrap;">
              <button type="submit" class="btn-rm"><i class="fas fa-paper-plane"></i> Submit Request</button>
              <button type="button" class="btn-soft" data-dismiss="modal"><i class="fas fa-times"></i> Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("../user/footer") %>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

  <script>
    function openReturnModal(orderId) {
      var form = document.getElementById("returnForm");
      form.action = "/cart/return/" + orderId;
      $('#returnModal').modal('show');
    }

    function validateReturnReason() {
      var reason = document.getElementById("reason").value || "";
      var err = document.getElementById("reasonError");

      if (reason.trim() === "") {
        err.style.display = "block";
        return false;
      }
      err.style.display = "none";
      return true;
    }

    // Query param toast: /orderdetails?message=...
    (function(){
      const params = new URLSearchParams(window.location.search);
      const msg = params.get('message');
      if (!msg) return;

      Swal.fire({
        toast: true,
        position: 'top-end',
        icon: 'error',
        background: '#fff',
        text: decodeURIComponent(msg.replace(/\+/g,' ')),
        showConfirmButton: false,
        timer: 3000
      });
    })();
  </script>
</body>
</html>
