<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Orders | RMHUB</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg">

  <!-- Bootstrap 4 -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

  <!-- DataTables (Bootstrap 4 skin) -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap4.min.css">

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    :root{
      --rm-primary:#3cf696;
      --rm-primary-2:#22d67f;
      --rm-ink:#0f172a;
      --rm-muted: rgba(15, 23, 42, 0.65);
      --rm-border: rgba(15, 23, 42, 0.10);
      --rm-shadow: 0 18px 40px rgba(2, 6, 23, 0.12);
      --rm-radius: 18px;
      --rm-radius-lg: 22px;
    }

    body{
      font-family: Arial, sans-serif;
      color: var(--rm-ink);
      background:
        radial-gradient(1100px 600px at 15% 10%, rgba(60, 246, 150, 0.22), transparent 55%),
        radial-gradient(900px 500px at 90% 25%, rgba(60, 246, 150, 0.14), transparent 55%),
        #f8f9fa;
    }

    .page-wrap{ margin-top: 18px; margin-bottom: 48px; }

    .glass-card{
      background: rgba(255,255,255,0.86);
      border: 1px solid rgba(255,255,255,0.60);
      border-radius: var(--rm-radius-lg);
      box-shadow: var(--rm-shadow);
      overflow: hidden;
    }

    .card-head{
      padding: 16px 18px;
      background: rgba(255,255,255,0.75);
      border-bottom: 1px solid rgba(15,23,42,0.08);
      display:flex;
      justify-content: space-between;
      align-items:flex-start;
      gap: 12px;
      flex-wrap: wrap;
    }

    .title{
      margin:0;
      font-weight: 900;
      letter-spacing: 0.2px;
      font-size: 20px;
      display:flex;
      align-items:center;
      gap: 10px;
    }

    .sub{
      margin: 6px 0 0 0;
      color: var(--rm-muted);
      font-weight: 700;
      font-size: 13px;
    }

    .pill{
      display:inline-flex;
      align-items:center;
      gap: 8px;
      padding: 10px 12px;
      border-radius: 999px;
      background: rgba(15,23,42,0.10);
      border: 1px solid rgba(15,23,42,0.12);
      font-weight: 900;
      white-space: nowrap;
    }

    .pill-green{
      background: rgba(60,246,150,0.18);
      border-color: rgba(60,246,150,0.30);
    }

    .btn-rm{
      border:none;
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      color: rgba(15,23,42,0.95);
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      box-shadow: 0 18px 30px rgba(34,214,127,0.18);
      transition: transform 160ms ease, filter 160ms ease;
      display:inline-flex;
      align-items:center;
      gap: 10px;
      white-space: nowrap;
    }
    .btn-rm:hover{
      transform: translateY(-1px);
      filter: brightness(0.98);
      color: rgba(15,23,42,0.95);
      text-decoration:none;
    }

    .btn-soft{
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.80);
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      color: rgba(15,23,42,0.92);
      display:inline-flex;
      align-items:center;
      gap: 10px;
      transition: transform 160ms ease, background 160ms ease;
      white-space: nowrap;
    }
    .btn-soft:hover{
      transform: translateY(-1px);
      background: rgba(255,255,255,0.95);
      color: rgba(15,23,42,0.95);
      text-decoration:none;
    }

    .section-pad{ padding: 16px 18px 18px 18px; }

    /* Order card list */
    .order-list{
      display:flex;
      flex-direction: column;
      gap: 12px;
    }

    .order-card{
      background: rgba(255,255,255,0.88);
      border: 1px solid rgba(15,23,42,0.10);
      border-radius: 20px;
      padding: 14px;
      box-shadow: 0 10px 18px rgba(2,6,23,0.06);
      transition: transform 160ms ease, box-shadow 160ms ease;
    }
    .order-card:hover{
      transform: translateY(-1px);
      box-shadow: 0 16px 26px rgba(2,6,23,0.10);
    }

    .order-top{
      display:flex;
      align-items:flex-start;
      justify-content: space-between;
      gap: 12px;
      flex-wrap: wrap;
      padding-bottom: 10px;
      border-bottom: 1px solid rgba(15,23,42,0.08);
      margin-bottom: 10px;
    }

    .order-id{
      font-weight: 900;
      letter-spacing: 0.2px;
    }
    .order-meta{
      font-weight: 800;
      color: rgba(15,23,42,0.72);
      font-size: 13px;
      margin-top: 6px;
      line-height: 1.4;
    }

    .badge-soft{
      display:inline-flex;
      align-items:center;
      gap: 8px;
      padding: 8px 10px;
      border-radius: 999px;
      background: rgba(15,23,42,0.08);
      border: 1px solid rgba(15,23,42,0.10);
      font-weight: 900;
      white-space: nowrap;
      font-size: 12px;
    }

    .badge-green{
      background: rgba(60,246,150,0.18);
      border-color: rgba(60,246,150,0.30);
    }

    .items{
      display:flex;
      flex-direction: column;
      gap: 10px;
    }

    .item-row{
      display:flex;
      align-items:flex-start;
      justify-content: space-between;
      gap: 12px;
      flex-wrap: wrap;
      padding: 10px 12px;
      border-radius: 16px;
      border: 1px solid rgba(15,23,42,0.10);
      background: rgba(255,255,255,0.80);
      transition: transform 160ms ease, background 160ms ease, border-color 160ms ease;
    }
    .item-row:hover{
      background: rgba(60,246,150,0.10);
      border-color: rgba(60,246,150,0.25);
      transform: translateY(-1px);
      cursor: pointer;
    }

    .prod{
      display:flex;
      align-items:flex-start;
      gap: 12px;
      min-width: 260px;
    }
    .prod-img{
      width: 58px;
      height: 58px;
      border-radius: 14px;
      background:#fff;
      border: 1px solid rgba(15,23,42,0.10);
      box-shadow: 0 10px 16px rgba(2,6,23,0.06);
      overflow:hidden;
      display:flex;
      align-items:center;
      justify-content:center;
      flex: 0 0 auto;
    }
    .prod-img img{
      width:100%;
      height:100%;
      object-fit: contain;
      padding: 7px;
      display:block;
    }

    .prod-title{
      margin:0;
      font-weight: 900;
      font-size: 14px;
      line-height: 1.2;
    }

    .prod-sub{
      margin-top: 4px;
      font-weight: 800;
      color: rgba(15,23,42,0.65);
      font-size: 12px;
    }

    .item-right{
      text-align:right;
      min-width: 180px;
      font-weight: 900;
      white-space: nowrap;
    }
    .item-right .muted{
      display:block;
      font-weight: 800;
      color: rgba(15,23,42,0.65);
      font-size: 12px;
      margin-top: 4px;
    }

    /* Pagination */
    .pager{
      margin-top: 16px;
      display:flex;
      justify-content: center;
      gap: 10px;
      flex-wrap: wrap;
    }

    /* Modal polish */
    .modal-content{
      border: none;
      border-radius: 18px;
      overflow: hidden;
      box-shadow: var(--rm-shadow);
    }
    .modal-header{
      border-bottom:none;
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      color: rgba(15,23,42,0.95);
    }
    .modal-title{ font-weight: 900; }

    /* DataTables theme alignment */
    .dataTables_wrapper .dataTables_filter input,
    .dataTables_wrapper .dataTables_length select{
      border-radius: 14px !important;
      border: 1px solid rgba(15,23,42,0.12) !important;
      background: rgba(255,255,255,0.85) !important;
      font-weight: 800;
      height: 42px;
      padding: 8px 12px;
      box-shadow: none !important;
    }
    .dataTables_wrapper .pagination .page-link{
      border-radius: 12px !important;
      margin: 0 4px;
      border: 1px solid rgba(15,23,42,0.10) !important;
      font-weight: 900;
      color: rgba(15,23,42,0.85) !important;
    }
    .dataTables_wrapper .pagination .page-item.active .page-link{
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2)) !important;
      border: none !important;
      color: rgba(15,23,42,0.95) !important;
    }

    table.dataTable{
      border-collapse: separate !important;
      border-spacing: 0 10px !important;
    }
    table.dataTable thead th{
      border:none !important;
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2)) !important;
      color: rgba(15,23,42,0.95) !important;
      font-weight: 900 !important;
      padding: 14px !important;
      white-space: nowrap;
    }
    table.dataTable tbody td{
      background: rgba(255,255,255,0.88) !important;
      border-top: 1px solid rgba(15,23,42,0.08) !important;
      border-bottom: 1px solid rgba(15,23,42,0.08) !important;
      padding: 14px !important;
      vertical-align: middle !important;
      font-weight: 800;
    }
    table.dataTable tbody td:first-child{
      border-left: 1px solid rgba(15,23,42,0.08) !important;
      border-top-left-radius: 16px;
      border-bottom-left-radius: 16px;
    }
    table.dataTable tbody td:last-child{
      border-right: 1px solid rgba(15,23,42,0.08) !important;
      border-top-right-radius: 16px;
      border-bottom-right-radius: 16px;
    }
  </style>
</head>

<body>
  <%- include("../user/nav") %>

  <div class="container page-wrap">
    <div class="glass-card">

      <div class="card-head">
        <div>
          <h1 class="title"><i class="fas fa-box"></i> My Orders</h1>
          <p class="sub">Track all purchases, review items, and open detailed order view when needed.</p>
        </div>

        <div class="d-flex" style="gap:10px; flex-wrap:wrap;">
          <span class="pill pill-green"><i class="fas fa-layer-group"></i> Total: <%= orderDetails.length %></span>

          <button type="button" class="btn-soft" data-toggle="modal" data-target="#cancelledOrderModal">
            <i class="fas fa-ban"></i> Cancelled Orders
          </button>

          <a class="btn-rm" href="/home"><i class="fas fa-store"></i> Continue Shopping</a>
        </div>
      </div>

      <div class="section-pad">

        <% if (orderDetails && orderDetails.length > 0) { %>
          <div class="order-list">
            <% orderDetails.forEach((order)=> { %>
              <div class="order-card">

                <div class="order-top">
                  <div>
                    <div class="order-id">
                      Order ID: #<%= order._id.toString().slice(-7).toUpperCase() %>
                    </div>
                    <div class="order-meta">
                      <div>
                        <i class="far fa-calendar-alt"></i>
                        <%= new Date(order.orderDate).toLocaleDateString('en-IN', { timeZone: 'Asia/Kolkata', weekday: 'long' }) %>
                        <%= new Date(order.orderDate).toLocaleDateString('en-IN', { timeZone: 'Asia/Kolkata', day: 'numeric', month: 'long', year: 'numeric' }) %>
                        • <%= new Date(order.orderDate).toLocaleTimeString('en-US', { timeZone: 'Asia/Kolkata', hour12: true }) %>
                      </div>
                      <div><i class="fas fa-receipt"></i> Total: ₹<%= Number(order.totalPrice).toLocaleString('en-IN') %></div>
                    </div>
                  </div>

                  <div class="d-flex" style="gap:10px; flex-wrap:wrap; align-items:center;">
                    <% if (order.appliedCoupon) { %>
                      <span class="badge-soft badge-green"><i class="fas fa-ticket-alt"></i> Coupon Applied</span>
                    <% } %>
                    <a class="btn-soft" href="/cart/orderdetails/<%= order._id %>">
                      <i class="fas fa-eye"></i> View Details
                    </a>
                  </div>
                </div>

                <div class="items">
                  <% if (order.orderItems && order.orderItems.length > 0) { %>
                    <% order.orderItems.forEach(item=> { %>
                      <div class="item-row" onclick="location.href='/cart/orderdetails/<%= order._id %>'">
                        <div class="prod">
                          <div class="prod-img">
                            <img src="<%= item.productId.image[0] %>" alt="<%= item.productId.model %>">
                          </div>
                          <div>
                            <p class="prod-title"><%= item.productId.model %></p>
                            <div class="prod-sub">Qty: <%= item.quantity %></div>
                          </div>
                        </div>

                        <div class="item-right">
                          ₹<%= Number(item.price * item.quantity).toLocaleString('en-IN') %>
                          <span class="muted">Line total</span>
                        </div>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <div class="pill"><i class="fas fa-info-circle"></i> No items in this order.</div>
                  <% } %>
                </div>

              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="pill"><i class="fas fa-info-circle"></i> No orders found yet.</div>
        <% } %>

        <!-- SERVER PAGINATION (single place only) -->
        <div class="pager">
          <% if (currentPage > 1) { %>
            <a class="btn-soft" href="/cart/orderhistory?page=<%= currentPage - 1 %>"><i class="fas fa-angle-left"></i> Previous</a>
          <% } %>

          <span class="pill">Page <%= currentPage %> / <%= totalPages %></span>

          <% if (currentPage < totalPages) { %>
            <a class="btn-soft" href="/cart/orderhistory?page=<%= currentPage + 1 %>">Next <i class="fas fa-angle-right"></i></a>
          <% } %>
        </div>

      </div>
    </div>
  </div>

  <!-- Cancelled Orders Modal (DataTables) -->
  <div class="modal fade" id="cancelledOrderModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="fas fa-ban mr-2"></i>Cancelled Orders</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="opacity:1;">
            <span aria-hidden="true" style="font-weight:900;">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <div class="table-responsive">
            <table id="cancelledOrderTable" class="table table-borderless" style="width:100%;">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Order</th>
                  <th>Items</th>
                </tr>
              </thead>
              <tbody>
                <% cancelledOrders.forEach((order)=> { %>
                  <tr>
                    <td style="font-weight:900; white-space:nowrap;">
                      <%= new Date(order.orderDate).toLocaleDateString('en-IN', { timeZone: 'Asia/Kolkata' }) %>
                    </td>

                    <td>
                      <div style="font-weight:900;">#<%= order._id.toString().slice(-7).toUpperCase() %></div>
                      <div style="font-weight:800; color: rgba(15,23,42,0.65); font-size:12px;">
                        Amount: ₹<%= Number(order.totalPrice).toLocaleString('en-IN') %>
                      </div>
                    </td>

                    <td>
                      <% order.orderItems.forEach(item=> { %>
                        <div style="display:flex; gap:10px; align-items:center; margin-bottom:8px;">
                          <div class="prod-img" style="width:44px; height:44px; border-radius:12px;">
                            <img src="<%= item.productId.image[0] %>" alt="<%= item.productId.model %>" style="padding:6px;">
                          </div>
                          <div style="font-weight:800;">
                            <div style="font-weight:900;"><%= item.productId.model %></div>
                            <div style="font-size:12px; color: rgba(15,23,42,0.65);">Qty: <%= item.quantity %></div>
                          </div>
                        </div>
                      <% }) %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="modal-footer" style="border-top:1px solid rgba(15,23,42,0.08);">
          <button type="button" class="btn-soft" data-dismiss="modal"><i class="fas fa-times"></i> Close</button>
        </div>
      </div>
    </div>
  </div>

  <%- include("../user/footer") %>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap4.min.js"></script>

  <script>
    // DataTables for cancelled orders (search + paging)
    $(document).ready(function () {
      const t = $('#cancelledOrderTable');
      if (t.length) {
        t.DataTable({
          pageLength: 8,
          lengthMenu: [5, 8, 15, 25],
          pagingType: "simple_numbers",
          autoWidth: false,
          order: [],
          language: {
            search: "",
            searchPlaceholder: "Search cancelled orders...",
            lengthMenu: "Show _MENU_",
            info: "Showing _START_ to _END_ of _TOTAL_",
            infoEmpty: "No cancelled orders",
            zeroRecords: "No matching records"
          }
        });
      }
    });

    // Toast from ?successMessage=
    (function(){
      const params = new URLSearchParams(window.location.search);
      const msg = params.get('successMessage');
      if (!msg) return;

      Swal.fire({
        toast: true,
        position: 'top-end',
        icon: 'success',
        background: '#fff',
        text: decodeURIComponent(msg.replace(/\+/g,' ')),
        showConfirmButton: false,
        timer: 2600
      });
    })();
  </script>
</body>
</html>
