<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Checkout | RMHUB</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg">

  <!-- Bootstrap 4 -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    :root{
      --rm-primary:#3cf696;
      --rm-primary-2:#22d67f;
      --rm-ink:#0f172a;
      --rm-muted: rgba(15, 23, 42, 0.65);
      --rm-border: rgba(15, 23, 42, 0.10);
      --rm-shadow: 0 18px 40px rgba(2, 6, 23, 0.12);
      --rm-radius: 18px;
      --rm-radius-lg: 22px;
    }

    body{
      color: var(--rm-ink);
      background:
        radial-gradient(1100px 600px at 15% 10%, rgba(60, 246, 150, 0.22), transparent 55%),
        radial-gradient(900px 500px at 90% 25%, rgba(60, 246, 150, 0.14), transparent 55%),
        #f8f9fa;
      font-family: Arial, sans-serif;
    }

    .page-wrap{ margin-top: 18px; margin-bottom: 48px; }

    .glass-card{
      background: rgba(255,255,255,0.86);
      border: 1px solid rgba(255,255,255,0.60);
      border-radius: var(--rm-radius-lg);
      box-shadow: var(--rm-shadow);
      overflow: hidden;
    }

    .card-head{
      padding: 16px 18px;
      background: rgba(255,255,255,0.75);
      border-bottom: 1px solid rgba(15,23,42,0.08);
      display:flex;
      align-items:flex-start;
      justify-content: space-between;
      gap: 12px;
      flex-wrap: wrap;
    }

    .title{
      margin:0;
      font-weight: 900;
      letter-spacing: 0.2px;
      font-size: 20px;
      display:flex;
      align-items:center;
      gap: 10px;
    }

    .sub{
      margin: 6px 0 0 0;
      color: var(--rm-muted);
      font-weight: 700;
      font-size: 13px;
    }

    .btn-rm{
      border:none;
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      color: rgba(15,23,42,0.95);
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      box-shadow: 0 18px 30px rgba(34,214,127,0.18);
      transition: transform 160ms ease, filter 160ms ease;
      display:inline-flex;
      align-items:center;
      gap: 10px;
      white-space: nowrap;
    }
    .btn-rm:hover{
      transform: translateY(-1px);
      filter: brightness(0.98);
      color: rgba(15,23,42,0.95);
      text-decoration:none;
    }

    .btn-soft{
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.80);
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      color: rgba(15,23,42,0.92);
      display:inline-flex;
      align-items:center;
      gap: 10px;
      transition: transform 160ms ease, background 160ms ease;
      white-space: nowrap;
    }
    .btn-soft:hover{
      transform: translateY(-1px);
      background: rgba(255,255,255,0.95);
      color: rgba(15,23,42,0.95);
      text-decoration:none;
    }

    .section-pad{ padding: 16px 18px 18px 18px; }

    .field{
      width: 100%;
      height: 44px;
      border-radius: 14px;
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.85);
      font-weight: 800;
      padding: 8px 12px;
      outline: none;
      box-shadow: none;
    }

    .mini-note{
      margin-top: 8px;
      color: rgba(15,23,42,0.62);
      font-weight: 700;
      font-size: 12px;
    }

    /* Order table (card-like rows) */
    .table-wrap{ overflow-x:auto; }
    table.order-table{
      width:100%;
      border-collapse: separate;
      border-spacing: 0 10px;
      margin:0;
    }
    table.order-table thead th{
      border:none;
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      color: rgba(15,23,42,0.95);
      font-weight: 900;
      padding: 14px;
      white-space: nowrap;
    }
    table.order-table tbody td{
      background: rgba(255,255,255,0.86);
      border-top: 1px solid rgba(15,23,42,0.08);
      border-bottom: 1px solid rgba(15,23,42,0.08);
      padding: 14px;
      vertical-align: middle;
    }
    table.order-table tbody td:first-child{
      border-left: 1px solid rgba(15,23,42,0.08);
      border-top-left-radius: 16px;
      border-bottom-left-radius: 16px;
      font-weight: 900;
    }
    table.order-table tbody td:last-child{
      border-right: 1px solid rgba(15,23,42,0.08);
      border-top-right-radius: 16px;
      border-bottom-right-radius: 16px;
    }

    .prod{
      display:flex;
      align-items:flex-start;
      gap: 12px;
      min-width: 260px;
    }
    .prod-img{
      width: 74px;
      height: 74px;
      border-radius: 16px;
      background:#fff;
      border: 1px solid rgba(15,23,42,0.10);
      box-shadow: 0 10px 16px rgba(2,6,23,0.06);
      overflow:hidden;
      display:flex;
      align-items:center;
      justify-content:center;
      flex: 0 0 auto;
    }
    .prod-img img{
      width:100%;
      height:100%;
      object-fit: contain;
      padding: 8px;
      display:block;
    }
    .prod-title{
      margin:0;
      font-weight: 900;
      font-size: 15px;
      line-height: 1.2;
    }
    .prod-desc{
      margin: 6px 0 0 0;
      color: rgba(15,23,42,0.70);
      font-weight: 700;
      font-size: 13px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .pill{
      display:inline-flex;
      align-items:center;
      gap: 8px;
      padding: 10px 12px;
      border-radius: 999px;
      background: rgba(15,23,42,0.10);
      border: 1px solid rgba(15,23,42,0.12);
      font-weight: 900;
      white-space: nowrap;
    }

    .summary-list{
      list-style:none;
      padding:0;
      margin:0;
      display:flex;
      flex-direction: column;
      gap: 10px;
    }
    .summary-item{
      display:flex;
      align-items:center;
      justify-content: space-between;
      gap: 12px;
      padding: 12px 14px;
      border-radius: 16px;
      background: rgba(255,255,255,0.80);
      border: 1px solid rgba(15,23,42,0.10);
      font-weight: 900;
    }
    .summary-item span{
      color: rgba(15,23,42,0.80);
      font-weight: 900;
    }

    .radio-box{
      margin-top: 10px;
      display:flex;
      flex-direction: column;
      gap: 10px;
    }
    .radio-item{
      display:flex;
      align-items:flex-start;
      justify-content: space-between;
      gap: 12px;
      padding: 12px 14px;
      border-radius: 16px;
      background: rgba(255,255,255,0.80);
      border: 1px solid rgba(15,23,42,0.10);
    }
    .radio-left{
      display:flex;
      align-items:flex-start;
      gap: 10px;
    }
    .radio-left label{
      margin:0;
      font-weight: 900;
      cursor: pointer;
    }
    .radio-sub{
      margin-top: 4px;
      color: rgba(15,23,42,0.62);
      font-weight: 700;
      font-size: 12px;
    }

    .sticky-col{
      position: sticky;
      top: 88px;
    }

    @media (max-width: 991.98px){
      .sticky-col{ position: static; top: auto; }
    }
  </style>
</head>

<body>
  <!-- Use user/nav include (your structure) -->
  <%- include("../user/nav") %>

  <div class="container page-wrap">

    <!-- PAGE HEADER -->
    <div class="glass-card mb-3">
      <div class="card-head">
        <div>
          <h2 class="title"><i class="fas fa-credit-card"></i> Checkout</h2>
          <p class="sub">Confirm address, apply coupon if needed, select payment method and proceed.</p>
        </div>
        <a class="btn-soft" href="/cart/getcart"><i class="fas fa-arrow-left"></i> Back to cart</a>
      </div>
    </div>

    <form action="/cart/checkout" method="POST" id="checkoutForm">
      <!-- Hidden fields consumed by your backend -->
      <input type="hidden" name="selectedAddress" id="selectedAddress">
      <input type="hidden" name="selectedPaymentMethod" id="selectedPaymentMethod">
      <input type="hidden" name="couponCode" id="couponCode" value="<%= coupon && coupon.isApplied ? coupon.couponCode : '' %>">

      <div class="row">
        <!-- LEFT -->
        <div class="col-lg-7 mb-3">

          <!-- Shipping Address -->
          <div class="glass-card mb-3">
            <div class="card-head">
              <div>
                <h3 class="title" style="font-size:18px;"><i class="fas fa-map-marker-alt"></i> Shipping Address</h3>
                <p class="sub">Select an address for delivery. You can add a new address anytime.</p>
              </div>
              <a class="btn-rm" href="/profile/addaddress"><i class="fas fa-plus"></i> Add address</a>
            </div>

            <div class="section-pad">
              <% if (user && user.address && user.address.length > 0) { %>
                <select name="shippingAddress" id="shippingAddress" class="field" required>
                  <% user.address.forEach((address)=> { %>
                    <option value="<%= address._id %>">
                      <%= address.addressLineOne %>, <%= address.addressLineTwo %>, <%= address.city %>, <%= address.state %>, <%= address.pincode %>
                    </option>
                  <% }); %>
                </select>
                <div class="mini-note">
                  Tip: we auto-select the current dropdown address for you (no extra “Use address” click required).
                </div>
              <% } else { %>
                <div class="pill">
                  <i class="fas fa-exclamation-triangle"></i>
                  No address found. Please add an address to continue.
                </div>
              <% } %>
            </div>
          </div>

          <!-- Order Details -->
          <div class="glass-card">
            <div class="card-head">
              <div>
                <h3 class="title" style="font-size:18px;"><i class="fas fa-receipt"></i> Order Details</h3>
                <p class="sub">Review items and quantities before payment.</p>
              </div>
              <div class="pill"><i class="fas fa-box"></i> <span><%= cartItems.length %> items</span></div>
            </div>

            <div class="section-pad">
              <div class="table-wrap">
                <table class="order-table">
                  <thead>
                    <tr>
                      <th style="width:6%;">#</th>
                      <th style="width:54%;">Product</th>
                      <th style="width:16%;">Price</th>
                      <th style="width:12%;">Qty</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% cartItems.forEach((item, index)=> { %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td>
                          <div class="prod">
                            <div class="prod-img">
                              <img src="<%= item.productId.image[0] %>" alt="<%= item.productId.model %>">
                            </div>
                            <div>
                              <p class="prod-title"><%= item.productId.model %></p>
                              <p class="prod-desc"><%= item.productId.description %></p>
                            </div>
                          </div>
                        </td>
                        <td style="font-weight:900; white-space:nowrap;">
                          ₹<%= Number(item.price).toLocaleString('en-IN') %>
                        </td>
                        <td style="font-weight:900;"><%= item.quantity %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>

        <!-- RIGHT -->
        <div class="col-lg-5 mb-3">
          <div class="sticky-col">

            <!-- Coupon -->
            <div class="glass-card mb-3">
              <div class="card-head">
                <div>
                  <h3 class="title" style="font-size:18px;"><i class="fas fa-ticket-alt"></i> Coupon</h3>
                  <p class="sub">Apply a valid coupon to optimize net payable.</p>
                </div>
              </div>

              <div class="section-pad">
                <select id="coupon" class="field" <%= coupon && coupon.isApplied ? 'disabled' : '' %>>
                  <% if (coupon && coupon.isApplied) { %>
                    <option value="<%= coupon.couponCode %>" selected><%= coupon.couponCode %> — Applied</option>
                  <% } else { %>
                    <option value="" selected disabled>Select coupon</option>
                    <% coupons.forEach((c)=> { %>
                      <option value="<%= c.code %>">
                        <%= c.code %> — <%= c.discountType === 'fixed' ? '₹' : '%' %><%= c.discountValue %> OFF
                      </option>
                    <% }); %>
                  <% } %>
                </select>

                <div class="d-flex" style="gap:10px; margin-top:10px; flex-wrap:wrap;">
                  <button type="button" class="btn-soft" onclick="applyCoupon()" <%= coupon && coupon.isApplied ? 'disabled' : '' %>>
                    <i class="fas fa-check"></i> Apply
                  </button>

                  <button type="button" class="btn-soft" onclick="removeCoupon()" <%= coupon && coupon.isApplied ? '' : 'disabled' %>>
                    <i class="fas fa-times"></i> Remove
                  </button>
                </div>
              </div>
            </div>

            <!-- Amount Summary -->
            <div class="glass-card mb-3">
              <div class="card-head">
                <div>
                  <h3 class="title" style="font-size:18px;"><i class="fas fa-calculator"></i> Amount Summary</h3>
                  <p class="sub">Totals are computed from your cart + coupon state.</p>
                </div>
              </div>

              <div class="section-pad">
                <ul class="summary-list">
                  <li class="summary-item">
                    <span>Total</span>
                    <strong>
                      ₹<span id="totalPrice">
                        <%= coupon && coupon.discountValue ? (parseFloat(totalPrice) + parseFloat(coupon.discountValue)).toFixed(2) : totalPrice.toFixed(2) %>
                      </span>
                    </strong>
                  </li>

                  <li class="summary-item" id="discountedAmount" style="display:<%- (coupon && coupon.isApplied) ? 'flex' : 'none' %>;">
                    <span>Discount</span>
                    <strong>
                      ₹<span id="discountedPrice"><%- coupon && coupon.discountValue ? Number(coupon.discountValue).toLocaleString('en-IN') : '0' %></span>
                    </strong>
                  </li>

                  <li class="summary-item" style="background: rgba(60,246,150,0.18); border-color: rgba(60,246,150,0.30);">
                    <span>Net Amount</span>
                    <strong>₹<span id="finalPrice"><%= totalPrice.toFixed(2) %></span></strong>
                  </li>
                </ul>

                <div class="mini-note">
                  Note: Coupon calculation is validated server-side. If it’s not applicable, you’ll see the reason.
                </div>
              </div>
            </div>

            <!-- Payment Method -->
            <div class="glass-card">
              <div class="card-head">
                <div>
                  <h3 class="title" style="font-size:18px;"><i class="fas fa-wallet"></i> Payment Method</h3>
                  <p class="sub">Choose one option and confirm order.</p>
                </div>
              </div>

              <div class="section-pad">
                <div class="radio-box">

                  <div class="radio-item">
                    <div class="radio-left">
                      <input type="radio" name="paymentMethod" value="cod" id="pm_cod" onclick="selectPaymentMethod('cod')">
                      <div>
                        <label for="pm_cod">Cash on Delivery</label>
                        <div class="radio-sub">Availability depends on net amount policy.</div>
                      </div>
                    </div>
                    <i class="fas fa-truck" style="color:rgba(15,23,42,0.75);"></i>
                  </div>

                  <div class="radio-item">
                    <div class="radio-left">
                      <input type="radio" name="paymentMethod" value="Wallet" id="pm_wallet"
                        <%= insufficient ? 'disabled' : '' %>
                        onclick="selectPaymentMethod('Wallet')">
                      <div>
                        <label for="pm_wallet">Wallet</label>
                        <div class="radio-sub">
                          Balance: ₹<strong id="walletBalance"><%= Number(user.wallet.balance).toLocaleString('en-IN') %></strong>
                          <% if (insufficient) { %>
                            <span style="color:#d33; font-weight:900;"> — Insufficient</span>
                          <% } %>
                        </div>
                      </div>
                    </div>
                    <i class="fas fa-wallet" style="color:var(--rm-primary-2);"></i>
                  </div>

                  <div class="radio-item">
                    <div class="radio-left">
                      <input type="radio" name="paymentMethod" value="paypal" id="pm_paypal" onclick="selectPaymentMethod('paypal')">
                      <div>
                        <label for="pm_paypal">PayPal</label>
                        <div class="radio-sub">You’ll be redirected to PayPal to approve payment.</div>
                      </div>
                    </div>
                    <i class="fab fa-paypal" style="color:rgba(15,23,42,0.75);"></i>
                  </div>

                </div>

                <div class="d-flex" style="gap:10px; margin-top:14px; flex-wrap:wrap;">
                  <button type="button" class="btn-rm" onclick="confirmOrder()" <%= (!user || !user.address || user.address.length === 0) ? 'disabled' : '' %>>
                    Proceed <i class="fas fa-arrow-right"></i>
                  </button>
                  <a class="btn-soft" href="/home"><i class="fas fa-store"></i> Continue shopping</a>
                </div>

                <div class="mini-note">
                  COD policy note: if COD is blocked by net amount threshold, we will notify you instantly.
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </form>

  </div>

  <!-- Use user/footer include (your structure) -->
  <%- include("../user/footer") %>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

  <script>
    // Ensure selectedAddress is always populated from dropdown
    function syncSelectedAddress() {
      const sel = document.getElementById('shippingAddress');
      const hidden = document.getElementById('selectedAddress');
      if (!sel || !hidden) return;

      const opt = sel.options[sel.selectedIndex];
      hidden.value = opt ? opt.text : '';
    }

    document.addEventListener('DOMContentLoaded', function () {
      const shipping = document.getElementById('shippingAddress');
      if (shipping) {
        syncSelectedAddress();
        shipping.addEventListener('change', syncSelectedAddress);
      }
    });

    // Payment method selection with COD threshold rule (kept consistent with your previous behavior)
    function selectPaymentMethod(method) {
      document.getElementById('selectedPaymentMethod').value = method;

      const finalPrice = parseFloat((document.getElementById('finalPrice')?.innerText || '0').replace(/,/g,''));
      // Your earlier code blocked COD when finalPrice >= 1000, so message is aligned to that behavior
      if (method === 'cod' && finalPrice >= 1000) {
        Swal.fire({
          toast: true,
          icon: 'error',
          position: 'top-end',
          title: "COD Not Available",
          text: "Cash on Delivery is available only for orders below ₹1000.",
          confirmButtonColor: "#3cf696",
        });
        const cod = document.getElementById('pm_cod');
        if (cod) cod.checked = false;
        document.getElementById('selectedPaymentMethod').value = '';
      }
    }

    function confirmOrder() {
      syncSelectedAddress();

      const selectedAddress = document.getElementById('selectedAddress').value;
      if (!selectedAddress) {
        Swal.fire({
          title: "Address Not Selected",
          text: "Please select an address before proceeding.",
          icon: "error",
          confirmButtonColor: "#3cf696",
        });
        return;
      }

      const selectedPaymentMethod = document.getElementById('selectedPaymentMethod').value;
      if (!selectedPaymentMethod) {
        Swal.fire({
          title: "Payment Method Not Selected",
          text: "Please select a payment method before proceeding.",
          icon: "error",
          confirmButtonColor: "#3cf696",
        });
        return;
      }

      Swal.fire({
        title: "Order Confirmation",
        text: "Proceed to place this order?",
        icon: "question",
        showCancelButton: true,
        confirmButtonColor: "#3cf696",
        cancelButtonColor: "#d33",
        confirmButtonText: "Confirm Order"
      }).then((result) => {
        if (!result.isConfirmed) return;

        if (selectedPaymentMethod === 'paypal') {
          return initiatePayPalPayment();
        }

        document.getElementById('checkoutForm').submit();
      });
    }

    async function applyCoupon() {
      const selectedCoupon = document.getElementById('coupon')?.value;
      if (!selectedCoupon) {
        Swal.fire({ icon:'error', title:'Select a coupon', text:'Please select a coupon first.' });
        return;
      }

      try {
        const res = await fetch('/applyCoupon', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ couponCode: String(selectedCoupon) }),
        });

        const data = await res.json().catch(() => ({}));
        if (!res.ok) throw new Error(data.message || 'Failed to apply coupon');

        Swal.fire({
          title: "Coupon Applied",
          text: data.message || "Coupon applied successfully.",
          icon: "success",
          confirmButtonColor: "#3cf696",
        }).then(() => location.reload());

      } catch (e) {
        Swal.fire({
          title: "Coupon Not Applicable",
          text: e.message,
          icon: "error",
          confirmButtonColor: "#3cf696",
        });
      }
    }

    async function removeCoupon() {
      try {
        const res = await fetch('/removeCoupon', { method: 'POST' });
        const data = await res.json().catch(() => ({}));
        if (!res.ok) throw new Error(data.message || 'Failed to remove coupon');

        Swal.fire({
          title: "Coupon Removed",
          text: data.message || "Coupon removed successfully.",
          icon: "success",
          showConfirmButton: false,
          timer: 1200
        }).then(() => location.reload());

      } catch (e) {
        Swal.fire({
          title: "Coupon Not Removed",
          text: e.message,
          icon: "error",
          confirmButtonColor: "#3cf696",
        });
      }
    }

    function initiatePayPalPayment() {
      const couponCode = document.getElementById('couponCode')?.value || '';

      let finalPrice = parseFloat((document.getElementById('finalPrice')?.innerText || '0').replace(/,/g,''));
      if (!finalPrice || Number.isNaN(finalPrice)) {
        finalPrice = parseFloat((document.getElementById('totalPrice')?.innerText || '0').replace(/,/g,''));
      }

      const sel = document.getElementById('shippingAddress');
      const selectedAddress = sel ? sel.options[sel.selectedIndex].text : '';

      fetch('/payment/payment', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          amount: finalPrice,
          address: selectedAddress,
          couponCode: couponCode
        })
      })
      .then(r => r.json())
      .then(data => {
        if (!data || !data.approvalUrl) throw new Error('PayPal approval URL missing');
        window.location.href = data.approvalUrl;
      })
      .catch(err => {
        console.error(err);
        Swal.fire({
          icon:'error',
          title:'Payment init failed',
          text:'Unable to initiate PayPal payment. Please try again.',
          confirmButtonColor: "#3cf696",
        });
      });
    }
  </script>
</body>
</html>
