<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Cart | RMHUB</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg">

  <!-- Bootstrap 4 -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

  <!-- DataTables (Bootstrap 4 skin) -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap4.min.css">

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

  <style>
    :root{
      --rm-primary:#3cf696;
      --rm-primary-2:#22d67f;
      --rm-ink:#0f172a;
      --rm-muted: rgba(15, 23, 42, 0.65);
      --rm-shadow: 0 18px 40px rgba(2, 6, 23, 0.12);
      --rm-radius-lg: 22px;
    }

    body{
      color: var(--rm-ink);
      background:
        radial-gradient(1100px 600px at 15% 10%, rgba(60, 246, 150, 0.22), transparent 55%),
        radial-gradient(900px 500px at 90% 25%, rgba(60, 246, 150, 0.14), transparent 55%),
        #f8f9fa;
    }

    .page-wrap{ margin-top: 18px; margin-bottom: 48px; }

    .glass-card{
      background: rgba(255,255,255,0.86);
      border: 1px solid rgba(255,255,255,0.60);
      border-radius: var(--rm-radius-lg);
      box-shadow: var(--rm-shadow);
      overflow: hidden;
    }

    .page-head{
      padding: 18px 18px 12px 18px;
      display:flex;
      align-items:flex-start;
      justify-content: space-between;
      gap: 12px;
      border-bottom: 1px solid rgba(15,23,42,0.08);
      background: rgba(255,255,255,0.75);
    }

    .page-title{
      margin:0;
      font-weight: 900;
      letter-spacing: 0.2px;
      font-size: 22px;
      display:flex;
      align-items:center;
      gap: 10px;
    }

    .page-sub{
      margin: 6px 0 0 0;
      color: var(--rm-muted);
      font-weight: 700;
      font-size: 13px;
    }

    .user-chip{
      display:inline-flex;
      align-items:center;
      gap: 8px;
      padding: 10px 12px;
      border-radius: 999px;
      background: rgba(60,246,150,0.18);
      border: 1px solid rgba(60,246,150,0.30);
      font-weight: 900;
      color: rgba(15,23,42,0.92);
      white-space: nowrap;
    }

    .table-wrap{ padding: 14px 18px 12px 18px; }

    /* DataTables style */
    .dataTables_wrapper .dataTables_filter input,
    .dataTables_wrapper .dataTables_length select{
      border-radius: 14px !important;
      border: 1px solid rgba(15,23,42,0.12) !important;
      background: rgba(255,255,255,0.85) !important;
      font-weight: 800;
      height: 42px;
      padding: 8px 12px;
      box-shadow: none !important;
    }

    table.dataTable{
      border-collapse: separate !important;
      border-spacing: 0 10px !important;
    }

    table.dataTable thead th{
      border: none !important;
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2)) !important;
      color: rgba(15,23,42,0.95) !important;
      font-weight: 900 !important;
      padding: 14px !important;
    }

    table.dataTable tbody td{
      background: rgba(255,255,255,0.86) !important;
      border-top: 1px solid rgba(15,23,42,0.08) !important;
      border-bottom: 1px solid rgba(15,23,42,0.08) !important;
      padding: 14px !important;
      vertical-align: middle !important;
    }

    table.dataTable tbody td:first-child{
      border-left: 1px solid rgba(15,23,42,0.08) !important;
      border-top-left-radius: 16px;
      border-bottom-left-radius: 16px;
      font-weight: 900;
    }

    table.dataTable tbody td:last-child{
      border-right: 1px solid rgba(15,23,42,0.08) !important;
      border-top-right-radius: 16px;
      border-bottom-right-radius: 16px;
    }

    .prod{
      display:flex;
      align-items:flex-start;
      gap: 12px;
      min-width: 280px;
    }

    .prod-img{
      width: 74px;
      height: 74px;
      border-radius: 16px;
      background:#fff;
      border: 1px solid rgba(15,23,42,0.10);
      box-shadow: 0 10px 16px rgba(2,6,23,0.06);
      overflow:hidden;
      display:flex;
      align-items:center;
      justify-content:center;
      flex: 0 0 auto;
    }

    .prod-img img{
      width:100%;
      height:100%;
      object-fit: contain;
      padding: 8px;
      display:block;
    }

    .prod-title{
      margin:0;
      font-weight: 900;
      font-size: 15px;
      line-height: 1.2;
    }

    .prod-desc{
      margin: 6px 0 0 0;
      color: rgba(15,23,42,0.70);
      font-weight: 700;
      font-size: 13px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .qty-input{
      width: 92px;
      height: 44px;
      border-radius: 14px;
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.85);
      font-weight: 900;
      text-align: center;
    }

    .price, .subtotal{
      font-weight: 900;
      white-space: nowrap;
    }

    .btn-icon{
      width: 44px;
      height: 44px;
      border-radius: 14px;
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.80);
      display:inline-flex;
      align-items:center;
      justify-content:center;
      color: rgba(15,23,42,0.92);
      box-shadow: 0 10px 16px rgba(2,6,23,0.06);
      transition: transform 160ms ease, background 160ms ease;
    }
    .btn-icon:hover{
      transform: translateY(-1px);
      background: rgba(255,255,255,0.95);
      text-decoration:none;
      color: rgba(15,23,42,0.95);
    }

    .btn-cta{
      border:none;
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      color: rgba(15,23,42,0.95);
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      box-shadow: 0 18px 30px rgba(34,214,127,0.18);
      transition: transform 160ms ease, filter 160ms ease;
      display:inline-flex;
      align-items:center;
      gap: 10px;
    }
    .btn-cta:hover{
      transform: translateY(-1px);
      filter: brightness(0.98);
      color: rgba(15,23,42,0.95);
      text-decoration:none;
    }

    .btn-soft{
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.80);
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      color: rgba(15,23,42,0.92);
      display:inline-flex;
      align-items:center;
      gap: 10px;
      transition: transform 160ms ease, background 160ms ease;
    }
    .btn-soft:hover{
      transform: translateY(-1px);
      background: rgba(255,255,255,0.95);
      text-decoration:none;
      color: rgba(15,23,42,0.95);
    }

    .summary-bar{
      padding: 12px 18px 18px 18px;
      display:flex;
      align-items:center;
      justify-content: space-between;
      gap: 12px;
      flex-wrap: wrap;
      border-top: 1px solid rgba(15,23,42,0.08);
      background: rgba(255,255,255,0.75);
    }

    .total-chip{
      display:inline-flex;
      align-items:center;
      gap: 10px;
      padding: 12px 14px;
      border-radius: 999px;
      background: rgba(15,23,42,0.10);
      border: 1px solid rgba(15,23,42,0.12);
      font-weight: 900;
      white-space: nowrap;
    }

    /* Pagination */
    .dataTables_wrapper .pagination .page-link{
      border-radius: 12px !important;
      margin: 0 4px;
      border: 1px solid rgba(15,23,42,0.10) !important;
      font-weight: 900;
      color: rgba(15,23,42,0.85) !important;
    }
    .dataTables_wrapper .pagination .page-item.active .page-link{
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2)) !important;
      border: none !important;
      color: rgba(15,23,42,0.95) !important;
    }
  </style>
</head>

<body>
  <%- include("../user/nav") %>

  <div class="container page-wrap">
    <div class="glass-card">

      <div class="page-head">
        <div>
          <h2 class="page-title"><i class="fas fa-shopping-cart"></i> My Cart</h2>
          <p class="page-sub">Search and adjust quantities. Subtotals update live.</p>
        </div>
        <div class="user-chip"><i class="fas fa-user"></i> <span><%= userEmail %></span></div>
      </div>

      <div class="table-wrap">
        <% if (userCart && userCart.cartItems && userCart.cartItems.length > 0) { %>

          <% let totalPrice = 0; %>

          <table id="cartTable" class="table table-borderless" style="width:100%;">
            <thead>
              <tr>
                <th style="width:6%;">#</th>
                <th style="width:44%;">Product</th>
                <th style="width:12%;">Price</th>
                <th style="width:12%;">Qty</th>
                <th style="width:14%;">Subtotal</th>
                <th style="width:12%;">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% userCart.cartItems.forEach((item, index) => { %>
                <% const unit = item.onOffer ? item.offerPrice : item.price; %>
                <% const subtotal = item.quantity * unit; %>
                <% totalPrice += subtotal; %>

                <tr>
                  <td><%= index + 1 %></td>

                  <td>
                    <div class="prod">
                      <div class="prod-img">
                        <img src="<%= item.productId.image[0] %>" alt="<%= item.productId.model %>">
                      </div>
                      <div>
                        <p class="prod-title"><%= item.productId.model %></p>
                        <p class="prod-desc"><%= item.productId.description %></p>
                      </div>
                    </div>
                  </td>

                  <td class="price">
                    ₹<%= Number(unit).toLocaleString('en-IN') %>
                  </td>

                  <td>
                    <input
                      type="number"
                      class="qty-input"
                      min="1"
                      value="<%= item.quantity %>"
                      onchange="updateQuantity('<%= item._id %>', this.value)">
                  </td>

                  <td class="subtotal" id="subtotal_<%= item._id %>">
                    ₹<%= Number(subtotal).toLocaleString('en-IN') %>
                  </td>

                  <td>
                    <div class="d-flex" style="gap:10px;">
                      <a class="btn-icon" href="/proddes/<%= item.productId._id %>" title="View">
                        <i class="fas fa-eye"></i>
                      </a>
                      <button class="btn-icon" type="button" title="Remove" onclick="confirmRemove('<%= item._id %>')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </td>
                </tr>

              <% }) %>
            </tbody>
          </table>

        <% } else { %>
          <div style="padding: 22px 18px; text-align:center; font-weight:900; color: rgba(15,23,42,0.80);">
            Cart is empty.
          </div>
        <% } %>
      </div>

      <div class="summary-bar">
        <a class="btn-soft" href="/home"><i class="fas fa-arrow-left"></i> Continue Shopping</a>

        <% if (userCart && userCart.cartItems && userCart.cartItems.length > 0) { %>
          <div class="total-chip" id="totalPrice">
            <i class="fas fa-receipt"></i>
            <span>Total: ₹<%= Number(totalPrice).toLocaleString('en-IN') %></span>
          </div>

          <button class="btn-cta" type="button" onclick="handleCheckout()">
            Checkout <i class="fas fa-arrow-right"></i>
          </button>
        <% } %>
      </div>

    </div>
  </div>

  <%- include("../user/footer") %>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap4.min.js"></script>

  <script>
    $(document).ready(function () {
      const tableEl = $('#cartTable');
      if (tableEl.length) {
        tableEl.DataTable({
          pageLength: 10,
          lengthMenu: [5, 10, 25, 50],
          pagingType: "simple_numbers",
          autoWidth: false,
          columnDefs: [
            { orderable: false, targets: [1, 3, 5] } // product, qty, actions
          ],
          language: {
            search: "",
            searchPlaceholder: "Search cart...",
            lengthMenu: "Show _MENU_",
            info: "Showing _START_ to _END_ of _TOTAL_",
            infoEmpty: "No items",
            zeroRecords: "No matching items found"
          }
        });
      }
    });

    function confirmRemove(itemId) {
      Swal.fire({
        title: "Remove item?",
        text: "This will remove the item from your cart.",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3cf696",
        cancelButtonColor: "#d33",
        confirmButtonText: "Remove"
      }).then((result) => {
        if (result.isConfirmed) {
          fetch(`/cart/removeitem/${itemId}`, { method: 'GET' })
            .then(response => {
              if (!response.ok) throw new Error('Failed to remove item');
              location.reload();
            })
            .catch(() => Swal.fire("Error", "Failed to remove item from cart!", "error"));
        }
      });
    }

    // Update quantity (keeps your existing endpoint + JSON response contract)
    function updateQuantity(itemId, newQuantity) {
      newQuantity = parseInt(newQuantity);

      if (isNaN(newQuantity) || newQuantity < 1) {
        Swal.fire("Error", "Invalid quantity", "error");
        return;
      }

      fetch(`/cart/updateitem/${itemId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ quantity: newQuantity })
      })
      .then(response => {
        if (!response.ok) throw new Error('Failed to update quantity');
        return response.json();
      })
      .then(data => {
        // Update subtotal + total in UI
        const subtotal = data.subtotal;
        const totalPrice = data.totalPrice;

        const subEl = document.getElementById(`subtotal_${itemId}`);
        if (subEl) subEl.innerText = `₹${Number(subtotal).toLocaleString('en-IN')}`;

        const totalEl = document.getElementById('totalPrice');
        if (totalEl) totalEl.innerHTML = `<i class="fas fa-receipt"></i><span>Total: ₹${Number(totalPrice).toLocaleString('en-IN')}</span>`;
      })
      .catch(() => {
        Swal.fire("Error", "Requested quantity exceeds stock limit!", "error");
      });
    }

    function handleCheckout() {
      const isCartEmpty = <%= !(userCart && userCart.cartItems && userCart.cartItems.length) %>;
      if (isCartEmpty) {
        Swal.fire({
          icon: 'error',
          title: 'Cart is empty',
          text: 'Please add items to your cart before proceeding to checkout',
          confirmButtonText: 'OK',
          confirmButtonColor: '#3cf696',
          allowOutsideClick: false
        });
        return;
      }
      window.location.href = '/cart/checkout';
    }
  </script>
</body>
</html>
