<!-- Font Awesome (keep here so all pages using nav get icons) -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">

<style>
  :root{
    --rm-primary:#3cf696;
    --rm-primary-2:#22d67f;
    --rm-ink:#0f172a;
    --rm-muted: rgba(15, 23, 42, 0.65);
    --rm-border: rgba(15, 23, 42, 0.10);
    --rm-shadow: 0 18px 40px rgba(2, 6, 23, 0.12);
    --rm-radius: 18px;
    --nav-h: 82px;
  }

  body{ padding-top: var(--nav-h); }

  .navbar.rmh-navbar{
    background: rgba(60, 246, 150, 0.90);
    backdrop-filter: blur(10px);
    box-shadow: 0 12px 30px rgba(2, 6, 23, 0.12);
    border-bottom: 1px solid rgba(255, 255, 255, 0.35);
    min-height: var(--nav-h);
  }

  .navbar .navbar-brand{
    display:flex;
    align-items:center;
    gap:12px;
    padding:6px 0;
  }

  .nav-brand-badge{
    width:52px;height:52px;border-radius:14px;
    background: rgba(255,255,255,0.45);
    border: 1px solid rgba(255,255,255,0.55);
    box-shadow: 0 10px 18px rgba(2,6,23,0.10);
    overflow:hidden;
    display:flex;align-items:center;justify-content:center;
  }

  /* KEY FIX: ensure full logo is visible */
  .nav-brand-badge img{
    width:100%;
    height:100%;
    object-fit: contain;
    padding: 6px;
    display:block;
  }

  .nav-brand-text{
    display:flex;
    flex-direction:column;
    line-height:1.1;
  }

  .nav-brand-text .brand-name{
    font-weight:900;
    letter-spacing:0.3px;
    margin:0;
    font-size:18px;
    color: rgba(15,23,42,0.95);
  }

  .nav-brand-text .brand-tag{
    margin:0;
    font-size:12px;
    color: rgba(15,23,42,0.7);
    font-weight:700;
  }

  .navbar-nav .nav-link{
    color: rgba(15, 23, 42, 0.92) !important;
    font-weight:800;
    letter-spacing:0.2px;
    border-radius:12px;
    padding:10px 12px;
    transition: background 160ms ease, transform 160ms ease;
  }

  .navbar-nav .nav-link:hover{
    background: rgba(255, 255, 255, 0.42);
    transform: translateY(-1px);
  }

  .nav-pill{
    background: rgba(255, 255, 255, 0.42);
    border: 1px solid rgba(255, 255, 255, 0.55);
    border-radius: 14px;
    padding: 6px;
    display:flex;
    align-items:center;
    box-shadow: 0 10px 18px rgba(2,6,23,0.08);
  }

  .nav-pill .form-control{
    border:none;
    border-radius:12px;
    background: rgba(255,255,255,0.65);
    height:42px;
    font-weight:700;
    color: rgba(15,23,42,0.9);
  }

  .nav-pill .form-control:focus{
    box-shadow: 0 0 0 4px rgba(60, 246, 150, 0.18);
  }

  .nav-pill .btn{
    height:42px;
    border-radius:12px;
    border:none;
    font-weight:900;
    color: rgba(15,23,42,0.9);
    background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
    padding:0 14px;
  }

  .nav-icon-btn{
    width:44px;height:44px;
    border-radius:14px;
    display:inline-flex;
    align-items:center;
    justify-content:center;
    background: rgba(255,255,255,0.42);
    border: 1px solid rgba(255,255,255,0.55);
    color: rgba(15,23,42,0.9);
    box-shadow: 0 10px 18px rgba(2,6,23,0.08);
    transition: transform 160ms ease, background 160ms ease;
  }

  .nav-icon-btn:hover{
    transform: translateY(-1px);
    background: rgba(255,255,255,0.55);
    text-decoration:none;
    color: rgba(15,23,42,0.95);
  }

  .navbar-toggler{ border:none; outline:none; padding:0; }
  .navbar-toggler .toggler-chip{
    width:46px;height:46px;border-radius:14px;
    display:inline-flex;align-items:center;justify-content:center;
    background: rgba(15,23,42,0.12);
    border: 1px solid rgba(255,255,255,0.55);
    color: rgba(15,23,42,0.9);
  }

  /* Mobile modal styling */
  .modal-content.rmh-modal{
    border-radius: 22px;
    border:none;
    overflow:hidden;
    box-shadow: var(--rm-shadow);
    background: rgba(255,255,255,0.92);
  }

  .modal-header.rmh-modal-header{
    background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
    border-bottom:none;
    color: rgba(15,23,42,0.95);
  }

  .rmh-list .list-group-item{
    border: 1px solid rgba(15,23,42,0.10);
    border-radius: 14px;
    margin-bottom: 10px;
    background: rgba(255,255,255,0.82);
    padding: 12px 14px;
  }

  .rmh-list .list-group-item a{
    color: rgba(15,23,42,0.92);
    font-weight: 900;
    text-decoration:none;
  }

  .rmh-list .list-group-item a:hover{
    color: rgba(34,214,127,1);
  }

  .dropdown-menu.rmh-dd{
    border-radius:14px;
    border:1px solid rgba(15,23,42,0.10);
    box-shadow: var(--rm-shadow);
  }

  .dropdown-menu.rmh-dd .dropdown-item{
    font-weight: 800;
  }
</style>

