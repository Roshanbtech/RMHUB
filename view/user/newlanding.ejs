  <style>
    :root {
      --rm-primary: #3cf696;
      --rm-primary-2: #22d67f;
      --rm-ink: #0f172a;
      --rm-muted: rgba(15, 23, 42, 0.65);
      --rm-card: #ffffff;
      --rm-soft: rgba(60, 246, 150, 0.14);
      --rm-border: rgba(15, 23, 42, 0.10);
      --rm-shadow: 0 18px 40px rgba(2, 6, 23, 0.12);
      --rm-radius: 18px;
      --rm-radius-lg: 22px;
      --nav-h: 82px;
    }

    body {
      font-family: Arial, sans-serif;
      color: var(--rm-ink);
      background:
        radial-gradient(1100px 600px at 15% 10%, rgba(60, 246, 150, 0.28), transparent 55%),
        radial-gradient(900px 500px at 90% 25%, rgba(60, 246, 150, 0.18), transparent 55%),
        #f8f9fa;
      padding-top: var(--nav-h);
    }

    /* NAVBAR */
    .navbar.rmh-navbar {
      background: rgba(60, 246, 150, 0.90);
      backdrop-filter: blur(10px);
      box-shadow: 0 12px 30px rgba(2, 6, 23, 0.12);
      border-bottom: 1px solid rgba(255, 255, 255, 0.35);
      min-height: var(--nav-h);
    }

    .navbar .navbar-brand {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 6px 0;
    }

    .nav-brand-badge {
      width: 52px;
      height: 52px;
      border-radius: 14px;
      background: rgba(255, 255, 255, 0.45);
      border: 1px solid rgba(255, 255, 255, 0.55);
      box-shadow: 0 10px 18px rgba(2, 6, 23, 0.10);
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    .nav-brand-badge img {
      width: 100%;
      height: 100%;
      object-fit: contain; /* ensures full logo visible */
      padding: 6px;
    }

    .nav-brand-text {
      display: flex;
      flex-direction: column;
      line-height: 1.1;
    }

    .nav-brand-text .brand-name {
      font-weight: 900;
      letter-spacing: 0.3px;
      margin: 0;
      font-size: 18px;
      color: rgba(15, 23, 42, 0.95);
    }

    .nav-brand-text .brand-tag {
      margin: 0;
      font-size: 12px;
      color: rgba(15, 23, 42, 0.7);
      font-weight: 700;
    }

    .navbar-nav .nav-link {
      color: rgba(15, 23, 42, 0.92) !important;
      font-weight: 800;
      letter-spacing: 0.2px;
      border-radius: 12px;
      padding: 10px 12px;
      transition: background 160ms ease, transform 160ms ease;
    }

    .navbar-nav .nav-link:hover {
      background: rgba(255, 255, 255, 0.42);
      transform: translateY(-1px);
    }

    .nav-pill {
      background: rgba(255, 255, 255, 0.42);
      border: 1px solid rgba(255, 255, 255, 0.55);
      border-radius: 14px;
      padding: 6px;
      display: flex;
      align-items: center;
      box-shadow: 0 10px 18px rgba(2, 6, 23, 0.08);
    }

    .nav-pill .form-control {
      border: none;
      border-radius: 12px;
      background: rgba(255, 255, 255, 0.65);
      height: 42px;
      font-weight: 700;
      color: rgba(15, 23, 42, 0.9);
    }

    .nav-pill .form-control:focus {
      box-shadow: 0 0 0 4px rgba(60, 246, 150, 0.18);
    }

    .nav-pill .btn {
      height: 42px;
      border-radius: 12px;
      border: none;
      font-weight: 900;
      color: rgba(15, 23, 42, 0.9);
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      padding: 0 14px;
    }

    .nav-icon-btn {
      width: 44px;
      height: 44px;
      border-radius: 14px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: rgba(255, 255, 255, 0.42);
      border: 1px solid rgba(255, 255, 255, 0.55);
      color: rgba(15, 23, 42, 0.9);
      box-shadow: 0 10px 18px rgba(2, 6, 23, 0.08);
      transition: transform 160ms ease, background 160ms ease;
    }

    .nav-icon-btn:hover {
      transform: translateY(-1px);
      background: rgba(255, 255, 255, 0.55);
      text-decoration: none;
      color: rgba(15, 23, 42, 0.95);
    }

    .navbar-toggler {
      border: none;
      outline: none;
      padding: 0;
    }

    .navbar-toggler .toggler-chip {
      width: 46px;
      height: 46px;
      border-radius: 14px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: rgba(15, 23, 42, 0.12);
      border: 1px solid rgba(255, 255, 255, 0.55);
      color: rgba(15, 23, 42, 0.9);
    }

    /* HERO / CAROUSEL */
    .hero-wrap {
      margin-top: 14px;
    }

    .hero-carousel {
      border-radius: var(--rm-radius-lg);
      overflow: hidden;
      box-shadow: var(--rm-shadow);
      border: 1px solid rgba(255, 255, 255, 0.55);
    }

    .hero-carousel .carousel-item {
      position: relative;
    }

    .hero-carousel .carousel-item img {
      width: 100%;
      height: 430px;
      object-fit: cover;
    }

    .hero-overlay {
      position: absolute;
      inset: 0;
      background:
        linear-gradient(90deg, rgba(2, 6, 23, 0.62) 0%, rgba(2, 6, 23, 0.25) 45%, rgba(2, 6, 23, 0.05) 100%);
    }

    .hero-caption {
      position: absolute;
      left: 28px;
      bottom: 26px;
      max-width: 520px;
      color: #fff;
      z-index: 2;
    }

    .hero-caption h1 {
      font-size: 34px;
      font-weight: 900;
      margin: 0 0 8px 0;
      letter-spacing: 0.2px;
    }

    .hero-caption p {
      margin: 0 0 14px 0;
      color: rgba(255, 255, 255, 0.85);
      font-weight: 600;
      text-align: left;
    }

    .btn-rm {
      border: none;
      border-radius: 14px;
      font-weight: 900;
      padding: 12px 18px;
      color: rgba(15, 23, 42, 0.95);
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      box-shadow: 0 18px 30px rgba(34, 214, 127, 0.22);
      transition: transform 160ms ease, filter 160ms ease;
    }

    .btn-rm:hover {
      transform: translateY(-1px);
      filter: brightness(0.98);
      color: rgba(15, 23, 42, 0.95);
    }

    /* VALUE PROPS */
    .value-row {
      margin-top: 18px;
    }

    .value-card {
      background: rgba(255, 255, 255, 0.75);
      border: 1px solid rgba(255, 255, 255, 0.6);
      border-radius: var(--rm-radius);
      box-shadow: 0 14px 30px rgba(2, 6, 23, 0.10);
      padding: 16px;
      height: 100%;
    }

    .value-card .vc-top {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 8px;
    }

    .value-card .vc-icon {
      width: 42px;
      height: 42px;
      border-radius: 14px;
      background: rgba(60, 246, 150, 0.20);
      border: 1px solid rgba(60, 246, 150, 0.35);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: rgba(15, 23, 42, 0.9);
    }

    .value-card h6 {
      margin: 0;
      font-weight: 900;
      letter-spacing: 0.2px;
    }

    .value-card p {
      margin: 0;
      color: var(--rm-muted);
      font-weight: 600;
      text-align: left;
      font-size: 13px;
    }

    /* FEATURE TILES (below hero) */
    .tile {
      border-radius: var(--rm-radius-lg);
      overflow: hidden;
      box-shadow: var(--rm-shadow);
      border: 1px solid rgba(255, 255, 255, 0.55);
      position: relative;
      height: 320px;
      background: #111;
    }

    .tile img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scale(1.02);
      transition: transform 220ms ease;
    }

    .tile:hover img {
      transform: scale(1.08);
    }

    .tile::after {
      content: "";
      position: absolute;
      inset: 0;
      background: linear-gradient(0deg, rgba(2, 6, 23, 0.72) 0%, rgba(2, 6, 23, 0.10) 70%);
    }

    .tile-content {
      position: absolute;
      left: 18px;
      right: 18px;
      bottom: 18px;
      z-index: 2;
      color: #fff;
    }

    .tile-content h3 {
      margin: 0 0 6px 0;
      font-weight: 900;
      font-size: 22px;
      letter-spacing: 0.2px;
    }

    .tile-content p {
      margin: 0 0 12px 0;
      text-align: left;
      color: rgba(255, 255, 255, 0.86);
      font-weight: 600;
    }

    /* CATEGORIES */
    .section-title {
      margin-top: 34px;
      margin-bottom: 16px;
      text-align: center;
    }

    .section-title .title-chip {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 10px 16px;
      border-radius: 16px;
      background: rgba(60, 246, 150, 0.22);
      border: 1px solid rgba(60, 246, 150, 0.35);
      font-weight: 900;
      letter-spacing: 0.2px;
      box-shadow: 0 14px 26px rgba(2, 6, 23, 0.08);
    }

    .cat-card {
      background: rgba(255, 255, 255, 0.75);
      border: 1px solid rgba(255, 255, 255, 0.6);
      border-radius: var(--rm-radius-lg);
      box-shadow: 0 14px 30px rgba(2, 6, 23, 0.10);
      padding: 18px;
      text-align: center;
      transition: transform 160ms ease;
      height: 100%;
    }

    .cat-card:hover {
      transform: translateY(-2px);
      text-decoration: none;
    }

    .cat-icon-wrap {
      width: 140px;
      height: 140px;
      margin: 0 auto 12px auto;
      border-radius: 999px;
      background: rgba(60, 246, 150, 0.14);
      border: 2px solid rgba(60, 246, 150, 0.45);
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .cat-icon-wrap img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .cat-card h5 {
      margin: 0;
      font-weight: 900;
      color: rgba(15, 23, 42, 0.95);
    }

    .cat-card small {
      display: block;
      margin-top: 6px;
      color: var(--rm-muted);
      font-weight: 600;
    }

    /* PRODUCT GRID */
    .product-card {
      border-radius: var(--rm-radius-lg);
      overflow: hidden;
      border: 1px solid rgba(255, 255, 255, 0.55);
      box-shadow: 0 14px 30px rgba(2, 6, 23, 0.10);
      transition: transform 160ms ease, box-shadow 160ms ease;
      background: rgba(255, 255, 255, 0.85);
      height: 100%;
    }

    .product-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 18px 40px rgba(2, 6, 23, 0.14);
    }

    .product-card .p-img {
      height: 210px;
      width: 100%;
      object-fit: cover;
      background: #fff;
    }

    .product-card .p-body {
      padding: 14px 14px 16px 14px;
    }

    .product-card .p-title {
      font-weight: 900;
      margin: 0 0 4px 0;
      text-align: left;
      color: rgba(15, 23, 42, 0.95);
      font-size: 15px;
      line-height: 1.25;
    }

    .p-meta {
      margin: 0;
      text-align: left;
      color: var(--rm-muted);
      font-weight: 700;
      font-size: 13px;
    }

    .p-price {
      margin: 10px 0 12px 0;
      text-align: left;
      font-weight: 900;
      font-size: 16px;
    }

    .p-btn {
      width: 100%;
      border: none;
      border-radius: 14px;
      font-weight: 900;
      padding: 12px 14px;
      color: rgba(15, 23, 42, 0.95);
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      transition: transform 160ms ease, filter 160ms ease;
    }

    .p-btn:hover {
      transform: translateY(-1px);
      filter: brightness(0.98);
      color: rgba(15, 23, 42, 0.95);
      text-decoration: none;
    }

    /* SECONDARY CAROUSEL */
    .secondary-carousel {
      border-radius: var(--rm-radius-lg);
      overflow: hidden;
      box-shadow: var(--rm-shadow);
      border: 1px solid rgba(255, 255, 255, 0.55);
    }

    .secondary-carousel .carousel-item img {
      width: 100%;
      height: 360px;
      object-fit: cover;
    }

    /* FOOTER */
    .site-footer {
      margin-top: 44px;
      background: rgba(15, 23, 42, 0.92);
      color: rgba(255, 255, 255, 0.82);
      padding: 44px 0 0 0;
      border-top: 1px solid rgba(255, 255, 255, 0.10);
    }

    .site-footer h6 {
      color: #fff;
      font-weight: 900;
      letter-spacing: 0.2px;
    }

    .site-footer .footer-links {
      padding-left: 0;
      list-style: none;
      margin: 0;
    }

    .site-footer .footer-links li {
      margin: 10px 0;
    }

    .site-footer .footer-links a {
      color: rgba(255, 255, 255, 0.75);
      font-weight: 700;
      text-decoration: none;
    }

    .site-footer .footer-links a:hover {
      color: var(--rm-primary);
      text-decoration: none;
    }

    .footer-bottom {
      margin-top: 26px;
      background: linear-gradient(135deg, rgba(60, 246, 150, 0.95), rgba(34, 214, 127, 0.95));
      padding: 14px 0;
      color: rgba(15, 23, 42, 0.92);
      font-weight: 900;
    }

    .social-icons {
      list-style: none;
      display: flex;
      gap: 10px;
      justify-content: flex-end;
      padding-left: 0;
      margin: 0;
    }

    .social-icons a {
      width: 42px;
      height: 42px;
      border-radius: 14px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: rgba(15, 23, 42, 0.14);
      color: rgba(15, 23, 42, 0.9);
      border: 1px solid rgba(255, 255, 255, 0.40);
      transition: transform 160ms ease, background 160ms ease;
    }

    .social-icons a:hover {
      transform: translateY(-1px);
      background: rgba(15, 23, 42, 0.18);
      text-decoration: none;
      color: rgba(15, 23, 42, 0.95);
    }

    /* MODAL NAV (mobile) */
    .modal-content.rmh-modal {
      border-radius: var(--rm-radius-lg);
      border: none;
      overflow: hidden;
      box-shadow: var(--rm-shadow);
      background: rgba(255, 255, 255, 0.92);
    }

    .modal-header.rmh-modal-header {
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      border-bottom: none;
      color: rgba(15, 23, 42, 0.95);
    }

    .rmh-list .list-group-item {
      border: 1px solid rgba(15, 23, 42, 0.10);
      border-radius: 14px;
      margin-bottom: 10px;
      background: rgba(255, 255, 255, 0.82);
      padding: 12px 14px;
    }

    .rmh-list .list-group-item a {
      color: rgba(15, 23, 42, 0.92);
      font-weight: 900;
      text-decoration: none;
    }

    .rmh-list .list-group-item a:hover {
      color: rgba(34, 214, 127, 1);
      text-decoration: none;
    }

    @media (max-width: 767.98px) {
      .hero-carousel .carousel-item img {
        height: 320px;
      }

      .secondary-carousel .carousel-item img {
        height: 260px;
      }

      .hero-caption h1 {
        font-size: 24px;
      }
    }
  </style>
</head>

