<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Address | RMHUB</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg">

  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  <style>
    :root{
      --rm-primary:#3cf696; --rm-primary-2:#22d67f;
      --rm-ink:#0f172a; --rm-muted: rgba(15, 23, 42, 0.65);
      --rm-shadow: 0 18px 40px rgba(2, 6, 23, 0.12);
      --rm-radius-lg: 22px;
    }
    body{
      font-family: Arial, sans-serif;
      color: var(--rm-ink);
      background:
        radial-gradient(1100px 600px at 15% 10%, rgba(60, 246, 150, 0.22), transparent 55%),
        radial-gradient(900px 500px at 90% 25%, rgba(60, 246, 150, 0.14), transparent 55%),
        #f8f9fa;
      margin:0;
    }
    .page-wrap{ margin-top: 18px; margin-bottom: 48px; }
    .glass-card{
      background: rgba(255,255,255,0.86);
      border: 1px solid rgba(255,255,255,0.60);
      border-radius: var(--rm-radius-lg);
      box-shadow: var(--rm-shadow);
      overflow:hidden;
      max-width: 720px;
      margin: 0 auto;
    }
    .card-head{
      padding: 16px 18px;
      background: rgba(255,255,255,0.75);
      border-bottom: 1px solid rgba(15,23,42,0.08);
      display:flex; justify-content:space-between; gap:12px; flex-wrap:wrap;
    }
    .title{ margin:0; font-weight:900; font-size:20px; display:flex; align-items:center; gap:10px; }
    .sub{ margin:6px 0 0 0; color: var(--rm-muted); font-weight:700; font-size:13px; }
    .section-pad{ padding: 16px 18px 18px 18px; }

    .field, .select{
      width:100%;
      border-radius: 14px;
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.85);
      font-weight: 800;
      padding: 10px 12px;
      outline:none;
      height: 46px;
    }

    .err{ font-weight:800; margin-top:6px; font-size:12px; color:#e11d48; }

    .exists{
      font-weight: 900;
      color: #e11d48;
      background: rgba(225,29,72,0.08);
      border: 1px solid rgba(225,29,72,0.18);
      border-radius: 14px;
      padding: 10px 12px;
      text-align:center;
      margin-bottom: 12px;
    }

    .btn-rm{
      border:none; border-radius:14px; font-weight:900;
      padding:11px 16px; color: rgba(15,23,42,0.95);
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      box-shadow: 0 18px 30px rgba(34,214,127,0.18);
      display:inline-flex; align-items:center; gap:10px; white-space:nowrap;
      transition: transform 160ms ease, filter 160ms ease;
    }
    .btn-rm:hover{ transform: translateY(-1px); filter: brightness(0.98); text-decoration:none; color: rgba(15,23,42,0.95); }

    .btn-soft{
      border:1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.80);
      border-radius:14px; font-weight:900;
      padding:11px 16px; color: rgba(15,23,42,0.92);
      display:inline-flex; align-items:center; gap:10px; white-space:nowrap;
      transition: transform 160ms ease, background 160ms ease;
    }
    .btn-soft:hover{ transform: translateY(-1px); background: rgba(255,255,255,0.95); text-decoration:none; color: rgba(15,23,42,0.95); }
  </style>
</head>

<body>
  <%- include("../user/nav") %>

  <div class="container page-wrap">
    <div class="glass-card">
      <div class="card-head">
        <div>
          <h1 class="title"><i class="fas fa-edit"></i> Edit Address</h1>
          <p class="sub">Update delivery details to ensure smooth shipping.</p>
        </div>
        <div class="d-flex" style="gap:10px; flex-wrap:wrap;">
          <a class="btn-soft" href="/profile/getprofile"><i class="fas fa-arrow-left"></i> Back</a>
        </div>
      </div>

      <div class="section-pad">
        <form action="/profile/editaddress/<%= address._id %>" method="POST" onsubmit="return validateForm()">
          <% if(locals.exists){ %>
            <div class="exists"><%= exists %></div>
          <% } %>

          <div class="form-group">
            <label style="font-weight:900;">Address Line 1</label>
            <input type="text" id="addressLineOne" name="addressLineOne" value="<%= address.addressLineOne %>" class="field">
            <div class="err" id="addressLineOneError"></div>
          </div>

          <div class="form-group">
            <label style="font-weight:900;">Address Line 2</label>
            <input type="text" id="addressLineTwo" name="addressLineTwo" value="<%= address.addressLineTwo %>" class="field">
            <div class="err" id="addressLineTwoError"></div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label style="font-weight:900;">City</label>
              <input type="text" id="city" name="city" value="<%= address.city %>" class="field">
              <div class="err" id="cityError"></div>
            </div>
            <div class="form-group col-md-6">
              <label style="font-weight:900;">State</label>
              <input type="text" id="state" name="state" value="<%= address.state %>" class="field">
              <div class="err" id="stateError"></div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label style="font-weight:900;">Pincode</label>
              <input type="text" id="pincode" name="pincode" value="<%= address.pincode %>" class="field">
              <div class="err" id="pincodeError"></div>
            </div>
            <div class="form-group col-md-6">
              <label style="font-weight:900;">Address Type</label>
              <select id="addressType" name="addressType" class="select">
                <option value="Home" <%= address.addressType==='Home' ? 'selected' : '' %>>Home</option>
                <option value="Work" <%= address.addressType==='Work' ? 'selected' : '' %>>Work</option>
              </select>
              <div class="err" id="addressTypeError"></div>
            </div>
          </div>

          <div class="d-flex" style="gap:10px; flex-wrap:wrap; margin-top:10px;">
            <button type="submit" class="btn-rm"><i class="fas fa-save"></i> Update Address</button>
            <a class="btn-soft" href="/profile/getprofile"><i class="fas fa-times"></i> Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include("../user/footer") %>

  <script>
    function validateForm() {
      var addressLineOne = document.getElementById("addressLineOne").value.trim();
      var addressLineTwo = document.getElementById("addressLineTwo").value.trim();
      var city = document.getElementById("city").value.trim();
      var state = document.getElementById("state").value.trim();
      var pincode = document.getElementById("pincode").value.trim();

      if (addressLineOne == "") { document.getElementById("addressLineOneError").innerHTML = "*Please enter address line 1"; document.getElementById("addressLineOne").style.borderColor = "red"; return false; }
      else { document.getElementById("addressLineOneError").innerHTML = ""; document.getElementById("addressLineOne").style.borderColor = ""; }

      if (addressLineTwo == "") { document.getElementById("addressLineTwoError").innerHTML = "*Please enter address line 2"; document.getElementById("addressLineTwo").style.borderColor = "red"; return false; }
      else { document.getElementById("addressLineTwoError").innerHTML = ""; document.getElementById("addressLineTwo").style.borderColor = ""; }

      if (city == "") { document.getElementById("cityError").innerHTML = "*Please enter city"; document.getElementById("city").style.borderColor = "red"; return false; }
      else { document.getElementById("cityError").innerHTML = ""; document.getElementById("city").style.borderColor = ""; }

      if (state == "") { document.getElementById("stateError").innerHTML = "*Please enter state"; document.getElementById("state").style.borderColor = "red"; return false; }
      else { document.getElementById("stateError").innerHTML = ""; document.getElementById("state").style.borderColor = ""; }

      if (pincode == "" || !(/^\d{6}$/.test(pincode))) { document.getElementById("pincodeError").innerHTML = "*Please enter a valid pincode"; document.getElementById("pincode").style.borderColor = "red"; return false; }
      else { document.getElementById("pincodeError").innerHTML = ""; document.getElementById("pincode").style.borderColor = ""; }

      return true;
    }

    document.querySelectorAll('input, select').forEach(input => {
      input.addEventListener('focus', function () {
        var errorId = this.id + 'Error';
        var el = document.getElementById(errorId);
        if (el) el.innerHTML = "";
        this.style.borderColor = "";
      });
    });
  </script>
</body>
</html>
