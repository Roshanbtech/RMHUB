                            <img src="/images/button-close-svgrepo-com.svg" style="width:25px;height:25px;">
                        </button>
                    </form>
                    <button class="edit-address-button"
                        onclick="location.href='/profile/editaddress/<%= address._id %>'" title="Edit Address">
                        <img src="/images/edit-svgrepo-com.svg" alt="Edit Icon"
                            style="width: 20px; height: 20px;background-color: black">
                    </button>

                    <div class="profile-details">
                        <label for="address">Address:</label>
                        <span id="address">
                            <%= address.addressLineOne %>, <%= address.addressLineTwo %>, <%= address.city %>, <%=
                                            address.state %>, <%= address.pincode %>
                        </span>
                    </div>
                    <div class="profile-details">
                        <label for="city">City:</label>
                        <span id="city">
                            <%= address.city %>
                        </span>
                    </div>
                    <div class="profile-details">
                        <label for="pincode">Pincode:</label>
                        <span id="pincode">
                            <%= address.pincode %>
                        </span>
                    </div>
                    <div class="profile-details">
                        <label for="state">State:</label>
                        <span id="state">
                            <%= address.state %>
                        </span>
                    </div>
                    <div class="profile-details">
                        <label for="addressType">AddressType:</label>
                        <span id="addressType">
                            <%= address.addressType %>
                        </span>
                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <div class="profile-details">
                            <label for="address">Address:</label>
                            <span id="address">No address found</span>
                        </div>
                        <% } %>

                            <div class="social-icons">
                                <a href="#"><i class="fab fa-facebook"></i></a>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                                <a href="#"><i class="fab fa-instagram"></i></a>
                                <a href="#"><i class="fab fa-linkedin"></i></a>
                            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        // Function to handle delete confirmation
        function confirmDelete(addressId, closeButton) {
            // Show SweetAlert confirmation dialog
            Swal.fire({
                title: 'Are you sure?',
                text: 'You are about to delete this address!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3cf696',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                // If user confirms deletion, submit the form to delete address
                if (result.isConfirmed) {
                    // Traverse up the DOM to find the parent form element
                    const form = closeButton.closest('.remove-address-form');
                    // Submit the form
                    form.submit();
                }
            });
        }

        function copyReferralCode() {
            // Get the referral code element
            var referralCode = document.getElementById("referalCode");
            // Create a textarea element
            var textarea = document.createElement("textarea");
            // Set the value of the textarea to the referral code
            textarea.value = referralCode.innerText;
            // Append the textarea to the document body
            document.body.appendChild(textarea);
            // Select the textarea
            textarea.select();
            // Copy the selected text
            document.execCommand("copy");
            // Remove the textarea from the document body
            document.body.removeChild(textarea);
            // Show a confirmation message
            Swal.fire({
                icon: 'success',
                title: 'Referral code copied to clipboard!',
                showConfirmButton: false,
                timer: 1500,
                position: 'top-end',
                toast: true
            })
        }

    </script>
    <script>
        // Function to parse URL query parameters
        const getParameterByName = (name, url = window.location.href) => {
            name = name.replace(/[[\]]/g, '\\$&');
            const regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)');
            const results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, ' '));
        };

        // Check if 'success' query parameter exists and display the message
        const successMessage = getParameterByName('success');
        if (successMessage) {
            // Display success message using SweetAlert
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: successMessage,
                position: 'top-end', // Position the alert to top right corner
                showConfirmButton: false,
                timer: 1500,
                toast: true, // Set to true for toast style
                timerProgressBar: true // Enable timer progress bar
            });
        }
    </script>
    
</body>

