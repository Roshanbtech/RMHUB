                <img src="/images/change-password-svgrepo-com.svg" style=" width:30px;height:30px;" alt="Password Icon">
            </button>
            <button type="button" class="order-summary-button" onclick="location.href='/cart/orderhistory'"
                title="My Orders">
                <img src="/images/orders-svg.svg" style=" width:30px;height:30px;" alt="Password Icon">
            </button>
            <button type="button" class="wallet-button" onclick="location.href='/profile/wallet'" title="My Wallet">
                <img src="/images/wallet.svg" style=" width:30px;height:30px;" alt="Password Icon">
            </button>
            <% if (user.referalCode) { %>
                <div class="profile-details">
                    <label for="referalCode">Referral Code:</label>
                    <span id="referalCode"><strong>
                            <%= user.referalCode %>
                        </strong></span>
                    <button onclick="copyReferralCode()" title="Copy Referral Code" style="border: 1px solid #3cf696">
                        <i class="fas fa-copy" style="color:#777"></i>
                    </button>
                </div>
                <% } else { %>
                    <button type="button" class="referral-code-button" onclick="location.href='/profile/genreferalcode'"
                        title="Generate Referral Code">
                        Generate Referral Code
                    </button>
                    <% } %>

        </div>
        
        <div class="profile-details">
            <label for="username">Username:</label>
            <span id="username">
                <%= user.firstName+" "+user.lastName %></span>
        </div>
        <div class="profile-details">
                    <label for="email">Email:</label>
                    <span id="email">
                        <%= user.email %>
                    </span>
        </div>
        <div class="profile-details">
            <label for="firstName">First Name:</label>
            <span id="firstName">
                <%= user.firstName %>
            </span>
        </div>
        <div class="profile-details">
            <label for="lastName">Last Name:</label>
            <span id="lastName">
                <%= user.lastName %>
            </span>
        </div>
    
        <% if (user.address.length> 0) { %>
            <% user.address.forEach(function(address) { %>
                <div class="address-card">

                    <form action="/profile/removeaddress/<%= address._id %>" method="GET" class="remove-address-form">
                        <button type="button" class="close-button" onclick="confirmDelete('<%= address._id %>', this)"
