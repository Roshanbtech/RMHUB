<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Profile | RMHUB</title>
  <link rel="icon" type="image/x-icon" href="/images/NavImg.jpg">

  <!-- Bootstrap 4 -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    :root{
      --rm-primary:#3cf696;
      --rm-primary-2:#22d67f;
      --rm-ink:#0f172a;
      --rm-muted: rgba(15, 23, 42, 0.65);
      --rm-border: rgba(15, 23, 42, 0.10);
      --rm-shadow: 0 18px 40px rgba(2, 6, 23, 0.12);
      --rm-radius: 18px;
      --rm-radius-lg: 22px;
    }

    body{
      font-family: Arial, sans-serif;
      color: var(--rm-ink);
      background:
        radial-gradient(1100px 600px at 15% 10%, rgba(60, 246, 150, 0.22), transparent 55%),
        radial-gradient(900px 500px at 90% 25%, rgba(60, 246, 150, 0.14), transparent 55%),
        #f8f9fa;
    }

    .page-wrap{ margin-top: 18px; margin-bottom: 48px; }

    .glass-card{
      background: rgba(255,255,255,0.86);
      border: 1px solid rgba(255,255,255,0.60);
      border-radius: var(--rm-radius-lg);
      box-shadow: var(--rm-shadow);
      overflow: hidden;
    }

    .card-head{
      padding: 16px 18px;
      background: rgba(255,255,255,0.75);
      border-bottom: 1px solid rgba(15,23,42,0.08);
      display:flex;
      justify-content: space-between;
      align-items:flex-start;
      gap: 12px;
      flex-wrap: wrap;
    }

    .title{
      margin:0;
      font-weight: 900;
      letter-spacing: 0.2px;
      font-size: 20px;
      display:flex;
      align-items:center;
      gap: 10px;
    }

    .sub{
      margin: 6px 0 0 0;
      color: var(--rm-muted);
      font-weight: 700;
      font-size: 13px;
    }

    .btn-rm{
      border:none;
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      color: rgba(15,23,42,0.95);
      background: linear-gradient(135deg, var(--rm-primary), var(--rm-primary-2));
      box-shadow: 0 18px 30px rgba(34,214,127,0.18);
      transition: transform 160ms ease, filter 160ms ease;
      display:inline-flex;
      align-items:center;
      gap: 10px;
      white-space: nowrap;
    }
    .btn-rm:hover{
      transform: translateY(-1px);
      filter: brightness(0.98);
      color: rgba(15,23,42,0.95);
      text-decoration:none;
    }

    .btn-soft{
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.80);
      border-radius: 14px;
      font-weight: 900;
      padding: 11px 16px;
      color: rgba(15,23,42,0.92);
      display:inline-flex;
      align-items:center;
      gap: 10px;
      transition: transform 160ms ease, background 160ms ease;
      white-space: nowrap;
    }
    .btn-soft:hover{
      transform: translateY(-1px);
      background: rgba(255,255,255,0.95);
      color: rgba(15,23,42,0.95);
      text-decoration:none;
    }

    .pill{
      display:inline-flex;
      align-items:center;
      gap: 8px;
      padding: 10px 12px;
      border-radius: 999px;
      background: rgba(15,23,42,0.10);
      border: 1px solid rgba(15,23,42,0.12);
      font-weight: 900;
      white-space: nowrap;
    }

    .pill-green{
      background: rgba(60,246,150,0.18);
      border-color: rgba(60,246,150,0.30);
    }

    .section-pad{ padding: 16px 18px 18px 18px; }

    .hero{
      display:flex;
      align-items:center;
      justify-content: space-between;
      gap: 16px;
      flex-wrap: wrap;
    }

    .avatar{
      width: 78px;
      height: 78px;
      border-radius: 22px;
      background: #fff;
      border: 1px solid rgba(15,23,42,0.10);
      box-shadow: 0 12px 18px rgba(2,6,23,0.08);
      display:flex;
      align-items:center;
      justify-content:center;
      overflow:hidden;
      flex: 0 0 auto;
    }
    .avatar img{
      width: 64px;
      height: 64px;
      object-fit: contain;
    }

    .profile-grid{
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      margin-top: 14px;
    }
    @media(max-width: 767.98px){
      .profile-grid{ grid-template-columns: 1fr; }
    }

    .info-box{
      background: rgba(255,255,255,0.80);
      border: 1px solid rgba(15,23,42,0.10);
      border-radius: 18px;
      padding: 14px;
    }
    .k{
      font-weight: 900;
      letter-spacing: 0.4px;
      font-size: 12px;
      text-transform: uppercase;
      color: rgba(15,23,42,0.65);
      margin-bottom: 6px;
    }
    .v{
      font-weight: 900;
      color: rgba(15,23,42,0.95);
      word-break: break-word;
    }

    .quick-actions{
      display:grid;
      grid-template-columns: repeat(5, minmax(0, 1fr));
      gap: 10px;
      margin-top: 14px;
    }
    @media(max-width: 991.98px){
      .quick-actions{ grid-template-columns: repeat(3, minmax(0, 1fr)); }
    }
    @media(max-width: 575.98px){
      .quick-actions{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
    }

    .action-tile{
      background: rgba(255,255,255,0.86);
      border: 1px solid rgba(15,23,42,0.10);
      border-radius: 18px;
      padding: 14px;
      display:flex;
      align-items:center;
      gap: 10px;
      font-weight: 900;
      color: rgba(15,23,42,0.92);
      transition: transform 160ms ease, box-shadow 160ms ease, border-color 160ms ease, background 160ms ease;
      cursor: pointer;
      text-decoration:none;
    }
    .action-tile:hover{
      transform: translateY(-1px);
      border-color: rgba(60,246,150,0.35);
      background: rgba(60,246,150,0.10);
      box-shadow: 0 16px 26px rgba(2,6,23,0.10);
      text-decoration:none;
      color: rgba(15,23,42,0.95);
    }
    .action-ico{
      width: 42px;
      height: 42px;
      border-radius: 14px;
      display:flex;
      align-items:center;
      justify-content:center;
      background: linear-gradient(135deg, rgba(60,246,150,0.28), rgba(34,214,127,0.18));
      border: 1px solid rgba(60,246,150,0.30);
      flex: 0 0 auto;
    }

    .address-grid{
      display:grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      margin-top: 10px;
    }
    @media(max-width: 991.98px){
      .address-grid{ grid-template-columns: 1fr; }
    }

    .addr-card{
      background: rgba(255,255,255,0.88);
      border: 1px solid rgba(15,23,42,0.10);
      border-radius: 20px;
      padding: 14px;
      box-shadow: 0 10px 18px rgba(2,6,23,0.06);
      position: relative;
      transition: transform 160ms ease, box-shadow 160ms ease, border-color 160ms ease;
    }
    .addr-card:hover{
      transform: translateY(-1px);
      border-color: rgba(60,246,150,0.35);
      box-shadow: 0 16px 26px rgba(2,6,23,0.10);
    }

    .addr-actions{
      position:absolute;
      top: 12px;
      right: 12px;
      display:flex;
      gap: 8px;
    }

    .icon-btn{
      width: 38px;
      height: 38px;
      border-radius: 12px;
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.86);
      display:flex;
      align-items:center;
      justify-content:center;
      cursor: pointer;
      transition: transform 160ms ease, background 160ms ease;
    }
    .icon-btn:hover{
      transform: translateY(-1px);
      background: rgba(255,255,255,0.98);
    }

    .icon-btn.danger{
      border-color: rgba(225,29,72,0.35);
    }

    .addr-title{
      font-weight: 900;
      margin-bottom: 8px;
      display:flex;
      align-items:center;
      gap: 10px;
    }

    .addr-line{
      font-weight: 800;
      color: rgba(15,23,42,0.72);
      line-height: 1.45;
      margin: 0;
    }

    .copy-btn{
      border: 1px solid rgba(15,23,42,0.12);
      background: rgba(255,255,255,0.86);
      border-radius: 12px;
      font-weight: 900;
      padding: 8px 12px;
      display:inline-flex;
      align-items:center;
      gap: 8px;
      cursor:pointer;
    }
    .copy-btn:hover{
      background: rgba(255,255,255,0.98);
    }
  </style>
</head>

<body>
  <!-- Since this page is in view/user/, include without ../ -->
  <%- include("nav") %>

  <div class="container page-wrap">
    <div class="glass-card">

      <div class="card-head">
        <div class="hero">
          <div style="display:flex; align-items:center; gap:14px;">
            <div class="avatar">
              <img src="/images/users-avatar-svgrepo-com.svg" alt="User">
            </div>
            <div>
              <h1 class="title"><i class="fas fa-user-circle"></i> Hey <%= user.firstName %>!</h1>
              <p class="sub">Manage your profile, addresses, orders and wallet â€” all in one place.</p>
            </div>
          </div>

          <div class="d-flex" style="gap:10px; flex-wrap:wrap;">
            <a class="btn-soft" href="/home"><i class="fas fa-arrow-left"></i> Back to Home</a>
            <a class="btn-rm" href="/home"><i class="fas fa-store"></i> Shop Now</a>
          </div>
        </div>
      </div>

      <div class="section-pad">

        <!-- QUICK ACTIONS -->
        <div class="quick-actions">
          <a class="action-tile" href="/profile/addaddress" title="Add Address">
            <div class="action-ico"><i class="fas fa-map-marker-alt"></i></div>
            <div>Add Address</div>
          </a>

          <a class="action-tile" href="/profile/editprofile/<%= user._id %>" title="Edit Profile">
            <div class="action-ico"><i class="fas fa-user-edit"></i></div>
            <div>Edit Profile</div>
          </a>

          <a class="action-tile" href="/profile/changepassword/<%= user._id %>" title="Change Password">
            <div class="action-ico"><i class="fas fa-key"></i></div>
            <div>Password</div>
          </a>

          <a class="action-tile" href="/cart/orderhistory" title="My Orders">
            <div class="action-ico"><i class="fas fa-box"></i></div>
            <div>My Orders</div>
          </a>

          <a class="action-tile" href="/profile/wallet" title="My Wallet">
            <div class="action-ico"><i class="fas fa-wallet"></i></div>
            <div>Wallet</div>
          </a>
        </div>

        <!-- REFERRAL -->
        <div style="margin-top:14px;">
          <% if (user.referalCode) { %>
            <div class="info-box">
              <div class="d-flex" style="justify-content:space-between; gap:10px; flex-wrap:wrap; align-items:center;">
                <div>
                  <div class="k">Referral Code</div>
                  <div class="v" id="referalCode"><%= user.referalCode %></div>
                  <div style="margin-top:6px; font-weight:800; color: rgba(15,23,42,0.65); font-size:12px;">
                    Share this code with friends to unlock RMHUB offers.
                  </div>
                </div>
                <button class="copy-btn" type="button" onclick="copyReferralCode()">
                  <i class="fas fa-copy"></i> Copy
                </button>
              </div>
            </div>
          <% } else { %>
            <div class="info-box">
              <div class="d-flex" style="justify-content:space-between; gap:10px; flex-wrap:wrap; align-items:center;">
                <div>
                  <div class="k">Referral Program</div>
                  <div class="v">Generate your referral code</div>
                  <div style="margin-top:6px; font-weight:800; color: rgba(15,23,42,0.65); font-size:12px;">
                    Get started and share with friends.
                  </div>
                </div>
                <a class="btn-rm" href="/profile/genreferalcode">
                  <i class="fas fa-bolt"></i> Generate
                </a>
              </div>
            </div>
          <% } %>
        </div>

        <!-- PROFILE INFO -->
        <div class="profile-grid">
          <div class="info-box">
            <div class="k">Full Name</div>
            <div class="v"><%= user.firstName + " " + user.lastName %></div>
          </div>

          <div class="info-box">
            <div class="k">Email</div>
            <div class="v"><%= user.email %></div>
          </div>

          <div class="info-box">
            <div class="k">First Name</div>
            <div class="v"><%= user.firstName %></div>
          </div>

          <div class="info-box">
            <div class="k">Last Name</div>
            <div class="v"><%= user.lastName %></div>
          </div>
        </div>

        <!-- ADDRESSES -->
        <div style="margin-top:14px;">
          <div class="d-flex" style="justify-content:space-between; gap:10px; flex-wrap:wrap; align-items:center;">
            <div class="pill pill-green"><i class="fas fa-map-marked-alt"></i> Saved Addresses</div>
            <a class="btn-soft" href="/profile/addaddress"><i class="fas fa-plus"></i> Add New</a>
          </div>

          <% if (user.address && user.address.length > 0) { %>
            <div class="address-grid">
              <% user.address.forEach(function(address) { %>
                <div class="addr-card">
                  <div class="addr-actions">
                    <button class="icon-btn" type="button"
                            onclick="location.href='/profile/editaddress/<%= address._id %>'"
                            title="Edit Address">
                      <i class="fas fa-edit"></i>
                    </button>

                    <form action="/profile/removeaddress/<%= address._id %>" method="GET" class="remove-address-form" style="margin:0;">
                      <button class="icon-btn danger" type="button"
                              onclick="confirmDelete('<%= address._id %>', this)"
                              title="Remove Address">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>

                  <div class="addr-title">
                    <i class="fas fa-home" style="color: rgba(15,23,42,0.75);"></i>
                    <span style="font-weight:900;"><%= address.addressType %></span>
                  </div>

                  <p class="addr-line">
                    <strong>Address:</strong>
                    <%= address.addressLineOne %>, <%= address.addressLineTwo %>, <%= address.city %>, <%= address.state %>, <%= address.pincode %>
                  </p>
                  <p class="addr-line"><strong>City:</strong> <%= address.city %></p>
                  <p class="addr-line"><strong>State:</strong> <%= address.state %></p>
                  <p class="addr-line"><strong>Pincode:</strong> <%= address.pincode %></p>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <div class="info-box" style="margin-top:10px;">
              <div class="v"><i class="fas fa-info-circle"></i> No address found</div>
              <div style="margin-top:6px; font-weight:800; color: rgba(15,23,42,0.65); font-size:12px;">
                Add an address to speed up checkout and delivery.
              </div>
            </div>
          <% } %>
        </div>

        <!-- Social (optional placeholders) -->
        <div style="margin-top:16px; text-align:center;">
          <div class="pill" style="justify-content:center;">
            <i class="fas fa-heart"></i> Thanks for being part of RMHUB
          </div>
        </div>

      </div>
    </div>
  </div>

  <%- include("footer") %>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

  <script>
    function confirmDelete(addressId, closeButton) {
      Swal.fire({
        title: 'Remove this address?',
        text: 'This address will be deleted from your profile.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#e11d48',
        cancelButtonColor: '#3cf696',
        confirmButtonText: 'Yes, remove'
      }).then((result) => {
        if (result.isConfirmed) {
          const form = closeButton.closest('.remove-address-form');
          form.submit();
        }
      });
    }

    function copyReferralCode() {
      var referralCodeEl = document.getElementById("referalCode");
      if (!referralCodeEl) return;

      var textarea = document.createElement("textarea");
      textarea.value = referralCodeEl.innerText.trim();
      document.body.appendChild(textarea);
      textarea.select();
      document.execCommand("copy");
      document.body.removeChild(textarea);

      Swal.fire({
        icon: 'success',
        title: 'Copied',
        text: 'Referral code copied to clipboard.',
        showConfirmButton: false,
        timer: 1400,
        position: 'top-end',
        toast: true
      });
    }

    // Toast: ?success=...
    (function(){
      const params = new URLSearchParams(window.location.search);
      const successMessage = params.get('success');
      if (!successMessage) return;

      Swal.fire({
        icon: 'success',
        title: 'Success',
        text: decodeURIComponent(successMessage.replace(/\+/g,' ')),
        position: 'top-end',
        showConfirmButton: false,
        timer: 1600,
        toast: true,
        timerProgressBar: true
      });
    })();
  </script>
</body>
</html>
