    <div class="container">
        <a href="/home" class="back-button" style="color:#3cf696">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>

        <h1>Hey <%= user.firstName%>!...</h1>
        <img src="/images/users-avatar-svgrepo-com.svg" alt="User Photo" class="profile-image"
